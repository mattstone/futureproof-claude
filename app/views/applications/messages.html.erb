<% content_for :page_title, "Messages - Application ##{@application.id}" %>

<div class="application-header">
  <div class="header-content">
    <h1>Messages</h1>
    <p>Application #<%= @application.id %> - <%= @application.address %></p>
  </div>
  <div class="header-actions">
    <%= link_to "â† Back to Dashboard", dashboard_path, class: "btn btn-secondary" %>
  </div>
</div>

<div class="messages-container">
  <!-- Message Threads -->
  <div class="message-threads-section">
    <h2>Messages from Futureproof</h2>
    
    <% if @messages.any? %>
      <div class="message-threads">
        <% @messages.each do |message| %>
          <div class="message-thread">
            <div class="message-header">
              <div class="message-sender-info">
                <% if message.from_ai_agent? && message.sender_avatar_path.present? %>
                  <%= image_tag message.sender_avatar_path, alt: "#{message.sender_name} Avatar", class: "ai-agent-avatar" %>
                <% else %>
                  <div class="default-avatar">
                    <i class="fas fa-robot"></i>
                  </div>
                <% end %>
                
                <div class="sender-details">
                  <div class="sender-name">
                    <strong><%= message.sender_name %></strong>
                    <% if message.from_ai_agent? %>
                      <span class="ai-assistant-badge">AI Assistant</span>
                    <% end %>
                  </div>
                  <div class="sender-role"><%= message.sender_role %></div>
                </div>
              </div>
              
              <div class="message-meta">
                <span class="message-status status-<%= message.status %>"><%= message.status.humanize %></span>
                <time class="message-time"><%= message.formatted_created_at %></time>
              </div>
            </div>
            
            <div class="message-subject">
              <h3><%= message.subject %></h3>
            </div>
            
            <div class="message-content">
              <%= message.content_html %>
            </div>
            
            <% if message.replies.any? %>
              <div class="message-replies">
                <h4>Your Replies:</h4>
                <% message.replies.each do |reply| %>
                  <div class="message-reply">
                    <div class="reply-header">
                      <strong><%= reply.sender_name %></strong>
                      <time><%= reply.formatted_created_at %></time>
                    </div>
                    <div class="reply-content">
                      <%= reply.content_html %>
                    </div>
                  </div>
                <% end %>
              </div>
            <% end %>
            
            <!-- Reply Form -->
            <div class="reply-form-section">
              <h4>Reply to this message:</h4>
              <%= form_with(model: [@application, @new_message], 
                            url: reply_to_message_application_path(@application), 
                            local: true, class: "reply-form") do |form| %>
                
                <%= form.hidden_field :parent_message_id, value: message.id %>
                
                <div class="field">
                  <%= form.label :subject %>
                  <%= form.text_field :subject, value: "Re: #{message.subject}", required: true %>
                </div>

                <div class="field">
                  <%= form.label :content, "Your Reply" %>
                  <%= form.text_area :content, rows: 4, class: "markup-editor", 
                                     placeholder: "Type your reply here...\n\n**Bold text**\n*Italic text*\n- Bullet points", 
                                     required: true %>
                  <small class="field-hint">
                    You can use markup: **bold**, *italic*, - bullet points
                  </small>
                </div>

                <div class="form-actions">
                  <%= form.submit "Send Reply", class: "btn btn-primary" %>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="empty-state">
        <div class="empty-icon">ðŸ“¬</div>
        <h3>No messages yet</h3>
        <p>When Futureproof sends you messages about your application, they will appear here.</p>
      </div>
    <% end %>
  </div>
</div>

