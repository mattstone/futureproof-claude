<%# HOMEPAGE: Full-Screen Hero with Calculator
     Modern design with beautiful background image %>

<div class="homepage">
  <%= render 'shared/header' %>

  <!-- Hero: Full-Screen with Image Background -->
  <section class="hero-fullscreen">
    <!-- Background Image with Overlay -->
    <div class="hero-fullscreen-bg">
      <%= image_tag "smiling-couple.jpeg", class: "hero-bg-img", alt: "Happy retired couple" %>
      <div class="hero-overlay"></div>
    </div>

    <!-- Hero Content Overlay - Two Column Layout -->
    <div class="hero-fullscreen-content">
      <div class="hero-two-column">
        <!-- Left Column: Message -->
        <div class="hero-left-column">
          <h1 class="hero-main-title">
            Equity Preservation<br>
            Mortgage<sup class="trademark">®</sup>
          </h1>
          <p class="hero-tagline">
            The smarter way to fund your retirement—turn your home equity into
            monthly income without selling your home or monthly repayments.
          </p>
        </div>

        <!-- Right Column: Calculator -->
        <div class="hero-right-column">
          <div class="hero-calculator-card" data-controller="calculator">
            <div class="calc-card-header">
              <h2 class="calc-card-title">Calculate Your Monthly Income</h2>
            </div>

            <div class="calc-card-body">
              <!-- Home Value Slider -->
              <div class="calc-input-group">
                <div class="calc-input-labels">
                  <label class="calc-label">Your Home Value</label>
                  <div class="calc-value-display" data-calculator-target="value">$1,500,000</div>
                </div>

                <input
                  type="range"
                  min="1000000"
                  max="10000000"
                  step="200000"
                  value="1500000"
                  class="calc-slider"
                  data-calculator-target="slider"
                  data-action="input->calculator#updateValue">

                <div class="calc-range-labels">
                  <span>$1M</span>
                  <span>$10M</span>
                </div>
              </div>

              <!-- Result Display -->
              <div class="calc-result-display">
                <div class="calc-result-label">Estimated Monthly Income*</div>
                <div class="calc-result-amount" data-calculator-target="incomeAmount">$8,500 - $12,000</div>
                <div class="calc-result-features">Tax-free • No repayments • Keep 100% equity</div>
              </div>

              <!-- Apply Button -->
              <%= link_to apply_path, class: "calc-apply-button" do %>
                <span>Apply Now</span>
                <span class="button-arrow">→</span>
              <% end %>

              <p class="calc-disclaimer">*Based on 80% LVR. Actual amount determined after assessment.</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Unique Features Section -->
  <br>
  <section class="unique-features-section">
    <div class="unique-features-container">
      <div class="section-header">
        <h2 class="section-title">Equity Preservation Mortgage ®</h2>
      </div>

      <div class="unique-features-grid">
        <div class="unique-feature-card">
          <div class="feature-check">✓</div>
          <h3 class="feature-title">Tax-free monthly income</h3>
        </div>

        <div class="unique-feature-card">
          <div class="feature-check">✓</div>
          <h3 class="feature-title">No property appreciation sharing</h3>
        </div>

        <div class="unique-feature-card">
          <div class="feature-check">✓</div>
          <h3 class="feature-title">No depletion of home equity</h3>
        </div>

        <div class="unique-feature-card">
          <div class="feature-check">✓</div>
          <h3 class="feature-title">Interest paid on behalf</h3>
        </div>

        <div class="unique-feature-card">
          <div class="feature-check">✓</div>
          <h3 class="feature-title">Stay in your home longer</h3>
        </div>

        <div class="unique-feature-card">
          <div class="feature-check">✓</div>
          <h3 class="feature-title">Equity preserved for wealth transfer</h3>
        </div>
      </div>
    </div>
  </section>

  <!-- Partner Logos Section -->
  <section class="partners-section">
    <div class="partners-container">
      <div class="section-header">
        <h2 class="section-title">Trusted Partners</h2>
      </div>
      <div class="partners-logos">
        <div class="partner-logo">
          <%= image_tag "partners/westpac-logo.png", alt: "Westpac", class: "partner-logo-img" %>
        </div>
        <div class="partner-logo">
          <%= image_tag "partners/ing-logo.png", alt: "ING", class: "partner-logo-img" %>
        </div>
        <div class="partner-logo">
          <%= image_tag "partners/ppr-logo.png", alt: "PPR", class: "partner-logo-img" %>
        </div>
        <div class="partner-logo">
          <%= image_tag "partners/macquarie-logo.png", alt: "Macquarie", class: "partner-logo-img" %>
        </div>
        <div class="partner-logo">
          <%= image_tag "partners/blackrock-logo.png", alt: "BlackRock", class: "partner-logo-img" %>
        </div>
      </div>
    </div>
  </section>

  <%= render 'shared/footer' %>
</div>
