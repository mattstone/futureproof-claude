<%# HERO OPTION 1: Split Screen with Benefits
     Mobile-first design with clear value proposition
     Clean, modern layout with trust indicators %>

<div class="hero-option-1">
  <%= render 'shared/header' %>

  <!-- Hero: Split Screen Design -->
  <section class="hero-split">
    <div class="hero-split-container">
      <!-- Left: Value Proposition -->
      <div class="hero-split-content">
        <div class="hero-badge">
          <span class="badge-icon">üè°</span>
          <span class="badge-text">Equity Preservation Mortgage¬Æ</span>
        </div>

        <h1 class="hero-split-title">
          Turn Your Home Equity Into<br>
          <span class="hero-highlight">Tax-Free Monthly Income</span>
        </h1>

        <p class="hero-split-subtitle">
          Unlock retirement income from your home without selling,
          giving up equity, or monthly repayments.
        </p>

        <!-- Key Benefits - Mobile Friendly -->
        <div class="hero-benefits">
          <div class="hero-benefit-item">
            <span class="benefit-check">‚úì</span>
            <span class="benefit-text">Keep 100% of property appreciation</span>
          </div>
          <div class="hero-benefit-item">
            <span class="benefit-check">‚úì</span>
            <span class="benefit-text">No monthly repayments required</span>
          </div>
          <div class="hero-benefit-item">
            <span class="benefit-check">‚úì</span>
            <span class="benefit-text">Preserve equity for inheritance</span>
          </div>
        </div>

        <!-- CTA Buttons -->
        <div class="hero-split-actions">
          <%= link_to "Calculate My Income", "#calculator", class: "btn site-btn-primary btn-hero-primary" %>
          <%= link_to "Learn More", "#features", class: "btn site-btn-secondary btn-hero-secondary" %>
        </div>

        <!-- Trust Indicators -->
        <div class="hero-trust">
          <div class="trust-stat">
            <span class="trust-number">$2B+</span>
            <span class="trust-label">Equity Protected</span>
          </div>
          <div class="trust-stat">
            <span class="trust-number">1,000+</span>
            <span class="trust-label">Happy Retirees</span>
          </div>
          <div class="trust-stat">
            <span class="trust-number">4.9‚òÖ</span>
            <span class="trust-label">Client Rating</span>
          </div>
        </div>
      </div>

      <!-- Right: Visual/Calculator -->
      <div class="hero-split-visual">
        <div class="hero-quick-calc">
          <div class="quick-calc-header">
            <h3 class="quick-calc-title">Quick Estimate</h3>
            <p class="quick-calc-subtitle">See your potential monthly income</p>
          </div>

          <div class="quick-calc-body" data-controller="calculator">
            <div class="calc-input-group">
              <label class="calc-label">Home Value</label>
              <input
                type="range"
                min="1000000"
                max="10000000"
                step="200000"
                value="1500000"
                class="calc-slider"
                data-calculator-target="slider"
                data-action="input->calculator#updateValue">
              <div class="calc-value" data-calculator-target="value">$1,500,000</div>
            </div>

            <div class="calc-result-box">
              <div class="calc-result-label">Estimated Monthly Income*</div>
              <div class="calc-result-amount" data-calculator-target="incomeAmount">$8,500 - $12,000</div>
            </div>

            <%= link_to "Get Accurate Quote ‚Üí", apply_path, class: "btn site-btn-primary calc-cta-btn" %>

            <p class="calc-disclaimer">*Estimate based on 60% LVR. Actual amount varies.</p>
          </div>
        </div>

        <!-- Background decoration -->
        <div class="hero-visual-decoration">
          <%= image_tag "home-picture.png", class: "hero-visual-img", alt: "Happy couple at home" %>
        </div>
      </div>
    </div>
  </section>

  <!-- Calculator Section (ID for anchor link) -->
  <section id="calculator" class="calculator-section">
    <div class="calculator-card">
      <h2 class="calculator-title">How much could you receive?</h2>
      <div class="calculator-content">
        <div class="calculator-input">
          <label for="home-value">Home Value</label>
          <div class="slider-container">
            <input type="range" id="home-value" min="1000000" max="10000000" step="200000" value="1500000" class="value-slider" data-calculator-target="slider" data-action="input->calculator#updateValue">
          </div>
          <div class="slider-value" data-calculator-target="value">$1,500,000</div>
        </div>
        <div class="calculator-result">
          <div class="monthly-income">
            <span class="income-amount" data-calculator-target="incomeAmount">Calculating...</span>
            <span class="income-period">Estimated Monthly Annuity Range*</span>
          </div>
          <%= link_to "Apply Now", apply_path, class: "btn site-btn-primary calculate-btn" %>
        </div>
      </div>
    </div>
  </section>

  <!-- Rest of the page continues... -->
  <section id="features" class="unique-features-section">
    <!-- Original features section content -->
  </section>

  <%= render 'shared/footer' %>
</div>

<style>
/* Hero Option 1 Styles */
.hero-option-1 {
  --primary: #0891b2;
  --primary-dark: #0e7490;
  --success: #10b981;
  --text: #1e293b;
  --text-light: #64748b;
  --bg-light: #f8fafc;
  --border: #e2e8f0;
}

/* Split Hero Layout */
.hero-split {
  background: linear-gradient(135deg, #f0f9ff 0%, #e0f2fe 100%);
  padding: 60px 0 80px;
  position: relative;
  overflow: hidden;
}

.hero-split-container {
  max-width: 1200px;
  margin: 0 auto;
  padding: 0 24px;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 60px;
  align-items: center;
}

/* Left Content */
.hero-split-content {
  z-index: 2;
}

.hero-badge {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: white;
  padding: 8px 16px;
  border-radius: 100px;
  margin-bottom: 24px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.1);
}

.badge-icon {
  font-size: 20px;
}

.badge-text {
  font-size: 14px;
  font-weight: 600;
  color: var(--primary);
}

.hero-split-title {
  font-size: 48px;
  font-weight: 800;
  line-height: 1.2;
  color: var(--text);
  margin: 0 0 20px 0;
}

.hero-highlight {
  color: var(--primary);
  position: relative;
}

.hero-split-subtitle {
  font-size: 20px;
  line-height: 1.6;
  color: var(--text-light);
  margin: 0 0 32px 0;
}

/* Hero Benefits */
.hero-benefits {
  display: flex;
  flex-direction: column;
  gap: 12px;
  margin-bottom: 32px;
}

.hero-benefit-item {
  display: flex;
  align-items: center;
  gap: 12px;
}

.benefit-check {
  width: 24px;
  height: 24px;
  background: var(--success);
  color: white;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 14px;
  font-weight: bold;
  flex-shrink: 0;
}

.benefit-text {
  font-size: 16px;
  font-weight: 500;
  color: var(--text);
}

/* Hero Actions */
.hero-split-actions {
  display: flex;
  gap: 16px;
  margin-bottom: 40px;
  flex-wrap: wrap;
}

.btn-hero-primary {
  padding: 16px 32px;
  font-size: 18px;
  font-weight: 700;
}

.btn-hero-secondary {
  padding: 16px 32px;
  font-size: 18px;
  font-weight: 600;
}

/* Trust Indicators */
.hero-trust {
  display: flex;
  gap: 32px;
  padding-top: 32px;
  border-top: 1px solid var(--border);
}

.trust-stat {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.trust-number {
  font-size: 24px;
  font-weight: 700;
  color: var(--primary);
}

.trust-label {
  font-size: 13px;
  color: var(--text-light);
  font-weight: 500;
}

/* Right Visual */
.hero-split-visual {
  position: relative;
  z-index: 1;
}

.hero-quick-calc {
  background: white;
  border-radius: 24px;
  padding: 32px;
  box-shadow: 0 20px 60px rgba(0,0,0,0.15);
  position: relative;
  z-index: 2;
}

.quick-calc-header {
  text-align: center;
  margin-bottom: 24px;
}

.quick-calc-title {
  font-size: 24px;
  font-weight: 700;
  color: var(--text);
  margin: 0 0 8px 0;
}

.quick-calc-subtitle {
  font-size: 15px;
  color: var(--text-light);
  margin: 0;
}

.quick-calc-body {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.calc-input-group {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.calc-label {
  font-size: 14px;
  font-weight: 600;
  color: var(--text);
}

.calc-slider {
  width: 100%;
  height: 8px;
  border-radius: 4px;
  background: var(--border);
  outline: none;
  appearance: none;
}

.calc-slider::-webkit-slider-thumb {
  appearance: none;
  width: 24px;
  height: 24px;
  border-radius: 50%;
  background: var(--primary);
  cursor: pointer;
  border: 3px solid white;
  box-shadow: 0 2px 8px rgba(0,0,0,0.2);
}

.calc-value {
  text-align: center;
  font-size: 20px;
  font-weight: 700;
  color: var(--text);
  padding: 12px;
  background: var(--bg-light);
  border-radius: 12px;
}

.calc-result-box {
  background: var(--bg-light);
  padding: 24px;
  border-radius: 16px;
  text-align: center;
}

.calc-result-label {
  font-size: 14px;
  color: var(--text-light);
  margin-bottom: 8px;
}

.calc-result-amount {
  font-size: 32px;
  font-weight: 700;
  color: var(--success);
}

.calc-cta-btn {
  width: 100%;
  padding: 16px;
  font-size: 16px;
  font-weight: 700;
}

.calc-disclaimer {
  font-size: 11px;
  color: var(--text-light);
  text-align: center;
  margin: 0;
}

.hero-visual-decoration {
  position: absolute;
  bottom: -40px;
  right: -40px;
  width: 300px;
  height: 300px;
  opacity: 0.1;
  z-index: 0;
}

.hero-visual-img {
  width: 100%;
  height: 100%;
  object-fit: cover;
  border-radius: 50%;
}

/* Mobile Responsive */
@media (max-width: 968px) {
  .hero-split-container {
    grid-template-columns: 1fr;
    gap: 40px;
  }

  .hero-split-title {
    font-size: 36px;
  }

  .hero-split-subtitle {
    font-size: 18px;
  }

  .hero-trust {
    gap: 24px;
    justify-content: space-between;
  }

  .trust-number {
    font-size: 20px;
  }
}

@media (max-width: 640px) {
  .hero-split {
    padding: 40px 0 60px;
  }

  .hero-split-title {
    font-size: 32px;
  }

  .hero-split-subtitle {
    font-size: 16px;
  }

  .hero-split-actions {
    flex-direction: column;
  }

  .btn-hero-primary,
  .btn-hero-secondary {
    width: 100%;
    justify-content: center;
  }

  .hero-trust {
    flex-wrap: wrap;
    gap: 16px;
  }

  .trust-stat {
    flex: 1;
    min-width: 100px;
  }

  .hero-quick-calc {
    padding: 24px;
  }
}
</style>
