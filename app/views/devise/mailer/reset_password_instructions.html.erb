<!-- Set email title for layout -->
<% @email_title = "Reset Your Password - Futureproof Financial Group" %>

<!-- Header Section -->
<table role="presentation" style="width: 100%; border-collapse: collapse; border: 0; border-spacing: 0; margin-bottom: 32px;">
  <tr>
    <td style="text-align: center;">
      <h2 style="margin: 0 0 16px 0; color: #1f2937; font-size: 32px; font-weight: 700; line-height: 1.2;">
        Password Reset Request
      </h2>
      <p style="margin: 0; color: #6b7280; font-size: 18px; line-height: 1.6;">
        We received a request to reset your password.
      </p>
    </td>
  </tr>
</table>

<!-- Content Section -->
<table role="presentation" style="width: 100%; border-collapse: collapse; border: 0; border-spacing: 0; margin-bottom: 32px;">
  <tr>
    <td>
      <p style="margin: 0 0 24px 0; color: #374151; font-size: 16px; line-height: 1.6;">
        Hello <strong style="color: #1f2937;"><%= @resource.email %></strong>,
      </p>
      
      <p style="margin: 0 0 24px 0; color: #374151; font-size: 16px; line-height: 1.6;">
        Someone has requested a link to change your password for your Futureproof Financial Group account. If this was you, click the button below to reset your password.
      </p>
      
      <p style="margin: 0 0 32px 0; color: #374151; font-size: 16px; line-height: 1.6;">
        If you didn't request this password reset, please ignore this email. Your password will remain unchanged.
      </p>
    </td>
  </tr>
</table>

<!-- Call-to-Action Button -->
<table role="presentation" style="width: 100%; border-collapse: collapse; border: 0; border-spacing: 0; margin-bottom: 32px;">
  <tr>
    <td align="center">
      <table role="presentation" style="border-collapse: collapse; border: 0; border-spacing: 0;">
        <tr>
          <td style="background: linear-gradient(135deg, #3b82f6 0%, #1d4ed8 100%); border-radius: 8px;">
            <a href="<%= edit_password_url(@resource, reset_password_token: @token) %>" 
               style="display: inline-block; padding: 16px 32px; color: #ffffff; text-decoration: none; font-size: 16px; font-weight: 600; text-align: center; min-width: 200px;">
              Reset My Password
            </a>
          </td>
        </tr>
      </table>
    </td>
  </tr>
</table>

<!-- Alternative Link Section -->
<table role="presentation" style="width: 100%; border-collapse: collapse; border: 0; border-spacing: 0; margin-bottom: 32px;">
  <tr>
    <td style="padding: 24px; background-color: #f9fafb; border-radius: 8px; border: 1px solid #e5e7eb;">
      <p style="margin: 0 0 16px 0; color: #374151; font-size: 14px; line-height: 1.6; text-align: center;">
        <strong>Having trouble with the button?</strong>
      </p>
      <p style="margin: 0; color: #6b7280; font-size: 14px; line-height: 1.6; text-align: center; word-break: break-all;">
        Copy and paste this link into your browser:<br>
        <a href="<%= edit_password_url(@resource, reset_password_token: @token) %>" 
           style="color: #3b82f6; text-decoration: underline;">
          <%= edit_password_url(@resource, reset_password_token: @token) %>
        </a>
      </p>
    </td>
  </tr>
</table>

<!-- Security Information -->
<table role="presentation" style="width: 100%; border-collapse: collapse; border: 0; border-spacing: 0; margin-bottom: 24px;">
  <tr>
    <td style="padding: 20px; background-color: #fef3c7; border-radius: 8px; border-left: 4px solid #f59e0b;">
      <p style="margin: 0 0 12px 0; color: #92400e; font-size: 14px; font-weight: 600;">
        üîí Important Security Information
      </p>
      <p style="margin: 0; color: #92400e; font-size: 14px; line-height: 1.6;">
        This password reset link will expire in 6 hours for your security. Your current password will remain active until you complete the reset process.
      </p>
    </td>
  </tr>
</table>

<!-- Help Section -->
<table role="presentation" style="width: 100%; border-collapse: collapse; border: 0; border-spacing: 0;">
  <tr>
    <td style="padding: 20px; background-color: #eff6ff; border-radius: 8px; border-left: 4px solid #3b82f6;">
      <p style="margin: 0 0 12px 0; color: #1e40af; font-size: 14px; font-weight: 600;">
        ‚ÑπÔ∏è Need Help?
      </p>
      <p style="margin: 0; color: #1e40af; font-size: 14px; line-height: 1.6;">
        If you continue to have trouble accessing your account or didn't request this password reset, please contact our support team at 
        <a href="mailto:support@futureprooffinancial.app" style="color: #1e40af; text-decoration: underline;">support@futureprooffinancial.app</a>
      </p>
    </td>
  </tr>
</table>
