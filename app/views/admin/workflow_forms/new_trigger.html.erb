<% content_for :page_title, "Create New Trigger" %>

<div class="admin-actions-bar">
  <div class="admin-search">
    <nav aria-label="Breadcrumb">
      <ol>
        <li>
          <a href="<%= admin_workflow_forms_path %>">Form-Based Workflows</a>
        </li>
        <li>
          <a href="<%= admin_workflow_form_path(@workflow) %>"><%= @workflow.name %></a>
        </li>
        <li>
          <span>New Trigger</span>
        </li>
      </ol>
    </nav>
    <h1>Create New Workflow Trigger</h1>
    <p>Build your workflow step-by-step using simple forms</p>
  </div>
</div>

<%= form_with url: create_trigger_admin_workflow_form_path(@workflow), method: :post, local: true do |f| %>
  <div class="admin-form-container">
    <!-- Main Form -->
    <div class="admin-form-main">

      <!-- Step 1: Trigger Setup -->
      <div class="admin-form-section">
        <div class="admin-form-section-header">
          <div class="admin-form-step-number">1</div>
          <h3>Trigger Setup</h3>
        </div>

        <div class="admin-form-grid">
          <div class="admin-form-field">
            <%= f.label :trigger_name, "Trigger Name", class: "admin-form-label" %>
            <%= f.text_field :trigger_name,
                             placeholder: "e.g., welcome_sequence",
                             class: "admin-form-input",
                             required: true %>
            <p class="admin-form-help">Use lowercase with underscores (no spaces)</p>
          </div>

          <div class="admin-form-field">
            <%= f.label :event_type, "Event Type", class: "admin-form-label" %>
            <%= f.select :event_type,
                         options_for_select([
                           ['Select Event Type', ''],
                           ['User Registered', 'user_registered'],
                           ['Application Created', 'application_created'],
                           ['Application Status Changed', 'application_status_changed'],
                           ['Contract Status Changed', 'contract_status_changed'],
                           ['Document Uploaded', 'document_uploaded'],
                           ['Email Verified', 'email_verified'],
                           ['Custom Event', 'custom']
                         ]),
                         {},
                         { class: "admin-form-select", required: true } %>
          </div>
        </div>

        <div class="admin-form-field">
          <%= f.label :conditions, "Trigger Conditions (Optional)", class: "admin-form-label" %>
          <%= f.text_area :conditions,
                          rows: 3,
                          placeholder: '{"user_type": "premium", "status": "active"}',
                          class: "admin-form-textarea" %>
          <p class="admin-form-help">JSON format for specific conditions (leave blank for all events)</p>
        </div>
      </div>

      <!-- Step 2: Workflow Steps -->
      <div class="admin-form-section">
        <div class="admin-form-section-header">
          <div class="admin-form-step-number">2</div>
          <h3>Workflow Steps</h3>
        </div>

        <div id="workflow-steps">
          <!-- Initial Step -->
          <div class="workflow-step-card" data-step-index="0">
            <div class="workflow-step-header">
              <h4>Step 1</h4>
              <button type="button" class="admin-btn admin-btn-sm admin-btn-danger remove-step" style="display: none;">Remove</button>
            </div>

            <div class="admin-form-grid">
              <div class="admin-form-field">
                <%= label_tag "steps[0][type]", "Action Type", class: "admin-form-label" %>
                <%= select_tag "steps[0][type]",
                               options_for_select([
                                 ['Send Email', 'email'],
                                 ['Add Delay', 'delay'],
                                 ['Call Webhook', 'webhook'],
                                 ['Update User Data', 'update_user']
                               ]),
                               { class: "admin-form-select step-type-select", data: { target: "step-0" } } %>
              </div>
            </div>

            <!-- Email Step Fields -->
            <div class="step-fields email-fields" data-step-type="email">
              <div class="admin-form-grid">
                <div class="admin-form-field">
                  <%= label_tag "steps[0][email_template_id]", "Email Template", class: "admin-form-label" %>
                  <%= select_tag "steps[0][email_template_id]",
                                 options_from_collection_for_select(@email_templates, :id, :name, nil),
                                 { class: "admin-form-select", include_blank: "Select Template" } %>
                </div>

                <div class="admin-form-field">
                  <%= label_tag "steps[0][subject]", "Subject Override", class: "admin-form-label" %>
                  <%= text_field_tag "steps[0][subject]", "", class: "admin-form-input", placeholder: "Leave blank to use template subject" %>
                </div>
              </div>

              <div class="admin-form-grid">
                <div class="admin-form-field">
                  <%= label_tag "steps[0][from_email]", "From Email", class: "admin-form-label" %>
                  <%= email_field_tag "steps[0][from_email]", "", class: "admin-form-input", placeholder: "noreply@futureproof.com" %>
                </div>

                <div class="admin-form-field">
                  <%= label_tag "steps[0][from_name]", "From Name", class: "admin-form-label" %>
                  <%= text_field_tag "steps[0][from_name]", "", class: "admin-form-input", placeholder: "FutureProof Team" %>
                </div>
              </div>
            </div>

            <!-- Delay Step Fields -->
            <div class="step-fields delay-fields" data-step-type="delay" style="display: none;">
              <div class="admin-form-grid">
                <div class="admin-form-field">
                  <%= label_tag "steps[0][duration]", "Duration", class: "admin-form-label" %>
                  <%= number_field_tag "steps[0][duration]", "", class: "admin-form-input", placeholder: "1", min: "1" %>
                </div>

                <div class="admin-form-field">
                  <%= label_tag "steps[0][unit]", "Unit", class: "admin-form-label" %>
                  <%= select_tag "steps[0][unit]",
                                 options_for_select([
                                   ['Minutes', 'minutes'],
                                   ['Hours', 'hours'],
                                   ['Days', 'days'],
                                   ['Weeks', 'weeks']
                                 ]),
                                 { class: "admin-form-select" } %>
                </div>
              </div>
            </div>

            <!-- Webhook Step Fields -->
            <div class="step-fields webhook-fields" data-step-type="webhook" style="display: none;">
              <div class="admin-form-grid">
                <div class="admin-form-field">
                  <%= label_tag "steps[0][url]", "Webhook URL", class: "admin-form-label" %>
                  <%= url_field_tag "steps[0][url]", "", class: "admin-form-input", placeholder: "https://api.example.com/webhook" %>
                </div>

                <div class="admin-form-field">
                  <%= label_tag "steps[0][method]", "HTTP Method", class: "admin-form-label" %>
                  <%= select_tag "steps[0][method]",
                                 options_for_select([
                                   ['POST', 'POST'],
                                   ['PUT', 'PUT'],
                                   ['PATCH', 'PATCH']
                                 ]),
                                 { class: "admin-form-select" } %>
                </div>
              </div>
            </div>

            <!-- Update User Step Fields -->
            <div class="step-fields update-user-fields" data-step-type="update_user" style="display: none;">
              <div class="admin-form-grid">
                <div class="admin-form-field">
                  <%= label_tag "steps[0][field]", "Field to Update", class: "admin-form-label" %>
                  <%= text_field_tag "steps[0][field]", "", class: "admin-form-input", placeholder: "status" %>
                </div>

                <div class="admin-form-field">
                  <%= label_tag "steps[0][value]", "New Value", class: "admin-form-label" %>
                  <%= text_field_tag "steps[0][value]", "", class: "admin-form-input", placeholder: "active" %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="workflow-step-actions">
          <button type="button" id="add-step" class="admin-btn admin-btn-secondary">Add Another Step</button>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="admin-form-actions">
        <a href="<%= admin_workflow_form_path(@workflow) %>" class="admin-btn admin-btn-secondary">Cancel</a>
        <input type="submit" value="Create Trigger" class="admin-btn admin-btn-primary">
      </div>
    </div>

    <!-- Sidebar -->
    <div class="admin-form-sidebar">
      <div class="admin-help-section">
        <h4>Quick Guide</h4>
        <div class="admin-help-content">
          <div class="admin-help-item">
            <h5>1. Trigger Setup</h5>
            <p>Choose when your workflow should start and give it a unique name.</p>
          </div>

          <div class="admin-help-item">
            <h5>2. Add Steps</h5>
            <p>Create a sequence of actions that will run automatically.</p>
          </div>
        </div>
      </div>

      <div class="admin-help-section">
        <h4>Available Actions</h4>
        <div class="admin-help-content">
          <div class="admin-help-action">
            <strong>Send Email</strong>
            <p>Send an automated email using a template</p>
          </div>
          <div class="admin-help-action">
            <strong>Add Delay</strong>
            <p>Wait a specified amount of time before next action</p>
          </div>
          <div class="admin-help-action">
            <strong>Call Webhook</strong>
            <p>Send data to an external service via HTTP</p>
          </div>
          <div class="admin-help-action">
            <strong>Update User Data</strong>
            <p>Modify user profile or status information</p>
          </div>
        </div>
      </div>
    </div>
  </div>
<% end %>

