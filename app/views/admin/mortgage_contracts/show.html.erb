<% content_for :page_title, "Mortgage Contract Details" %>

<div class="admin-actions-bar">
  <div>
    <%= link_to "← Back to Contracts", admin_mortgage_contracts_path, class: "admin-btn admin-btn-secondary" %>
  </div>
  
  <div class="admin-actions">
    <% if @mortgage_contract.draft? %>
      <%= link_to "Edit Contract", edit_admin_mortgage_contract_path(@mortgage_contract), class: "admin-btn admin-btn-primary" %>
      <%= link_to "Publish Contract", 
          publish_admin_mortgage_contract_path(@mortgage_contract), 
          method: :patch,
          class: "admin-btn admin-btn-info",
          data: { 
            confirm: "Are you sure you want to publish this contract? Published contracts cannot be directly edited." 
          } %>
    <% else %>
      <%= link_to "Edit (New Version)", edit_admin_mortgage_contract_path(@mortgage_contract, create_new_version: true), class: "admin-btn admin-btn-primary" %>
      <% unless @mortgage_contract.is_active? %>
        <%= link_to "Activate Contract", 
            activate_admin_mortgage_contract_path(@mortgage_contract), 
            method: :patch,
            class: "admin-btn admin-btn-success",
            data: { 
              confirm: "Are you sure you want to activate this version? This will deactivate the current active version." 
            } %>
      <% end %>
    <% end %>
  </div>
</div>

<div class="full-width-container">
  <div class="contract-header">
    <h2><%= @mortgage_contract.title %></h2>
    
    <div class="contract-meta">
      <div class="meta-item">
        <strong>Version:</strong>
        <span class="admin-badge admin-badge-info"><%= @mortgage_contract.version %></span>
      </div>
      
      <div class="meta-item">
        <strong>Status:</strong>
        <span class="admin-badge admin-badge-<%= @mortgage_contract.status_color %>"><%= @mortgage_contract.status %></span>
      </div>
      
      <div class="meta-item">
        <strong>Last Updated:</strong>
        <%= @mortgage_contract.formatted_last_updated %>
      </div>
      
      <div class="meta-item">
        <strong>Created:</strong>
        <%= @mortgage_contract.created_at.strftime("%B %d, %Y at %I:%M %p") %>
      </div>
      
      <% if @mortgage_contract.created_by %>
        <div class="meta-item">
          <strong>Created By:</strong>
          <%= @mortgage_contract.created_by.email %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Contract Preview -->
  <div class="contract-preview-section">
    <h3>Contract Preview</h3>
    <div class="contract-preview">
      <%= @mortgage_contract.rendered_content.html_safe %>
    </div>
  </div>

  <!-- Change History Section -->
  <div style="margin-top: 32px;">
    <% if @audit_history.any? %>
      <%= render 'shared/change_history', versions: @audit_history %>
    <% else %>
      <div class="no-history">
        <h3>Change History</h3>
        <p>No change history available for this contract.</p>
      </div>
    <% end %>
  </div>
</div>

