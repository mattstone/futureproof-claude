<% content_for :page_title, "Edit Terms and Conditions" %>

<div class="admin-content-header">
  <div class="admin-content-actions">
    <%= link_to "View Public Version", terms_and_conditions_path, class: "admin-btn admin-btn-secondary", target: "_blank" %>
    <%= link_to "← Back to Terms and Conditions", admin_terms_and_conditions_path, class: "admin-btn admin-btn-secondary" %>
  </div>
</div>

<div class="terms-editor-layout" 
     data-controller="markup-editor" 
     data-markup-editor-preview-url-value="<%= admin_terms_and_conditions_preview_path %>"
     data-markup-editor-legal-type-value="terms">
  <div class="terms-form-column">
    <div class="admin-form-container">
      <%= render 'form' %>
    </div>
  </div>
  
  <div class="terms-preview-column">
    <div class="preview-container">
      <div class="preview-header">
        <h3>Live Preview</h3>
        <p>See your changes in real-time</p>
      </div>
      <div class="markup-preview" 
           id="markup-preview-standalone"
           data-markup-editor-target="preview">
        <p class="preview-note">Content preview will appear here as you type...</p>
      </div>
    </div>
  </div>
</div>



