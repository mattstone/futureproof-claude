  background: #e0f2fe;
  padding: 2px 6px;
  border-radius: 3px;
  font-family: Monaco, monospace;
  font-size: 13px;
}

.markup-editor {
  font-family: "Monaco", "Menlo", "Ubuntu Mono", monospace;
  font-size: 14px;
  line-height: 1.5;
  border: 2px solid #e2e8f0;
  border-radius: 6px;
  background-color: #f8fafc;
  resize: vertical;
  width: 100%;
}

.markup-editor:focus {
  border-color: #3b82f6;
  outline: none;
  background-color: white;
}


.preview-note {
  color: #6b7280;
  font-style: italic;
  text-align: center;
  margin: 60px 0;
}

