<% if record.versions.any? %>
  <div class="admin-card">
    <div class="section-header">
      <h3>Change History</h3>
      <span class="change-count"><%= pluralize(record.versions.count, 'change') %></span>
    </div>
    
    <div class="change-history-list">
      <% record.versions.includes(:item).order(created_at: :desc).each do |version| %>
        <div class="change-entry">
          <div class="change-header">
            <div class="change-meta">
              <span class="change-event change-event-<%= version.event %>">
                <%= version.event.titleize %>
              </span>
              <span class="change-date">
                <%= version.created_at.strftime("%B %d, %Y at %I:%M %p") %>
              </span>
              <% if version.whodunnit.present? %>
                <span class="change-user">by User #<%= version.whodunnit %></span>
              <% end %>
            </div>
          </div>
          
          <% if version.object_changes.present? %>
            <div class="change-details">
              <% changes = YAML.load(version.object_changes) rescue {} %>
              <% changes.each do |field, change_values| %>
                <% next if field == 'updated_at' || field == 'created_at' %>
                <div class="field-change">
                  <div class="field-name"><%= field.humanize %></div>
                  <div class="field-values">
                    <% if change_values.is_a?(Array) && change_values.size == 2 %>
                      <div class="value-change">
                        <span class="old-value">
                          <%= change_values[0].present? ? change_values[0] : '<em>blank</em>'.html_safe %>
                        </span>
                        <span class="arrow">â†’</span>
                        <span class="new-value">
                          <%= change_values[1].present? ? change_values[1] : '<em>blank</em>'.html_safe %>
                        </span>
                      </div>
                    <% else %>
                      <span class="single-value"><%= change_values %></span>
                    <% end %>
                  </div>
                </div>
              <% end %>
            </div>
          <% elsif version.event == 'create' %>
            <div class="change-details">
              <p class="creation-note">Record created</p>
            </div>
          <% elsif version.event == 'destroy' %>
            <div class="change-details">
              <p class="deletion-note">Record deleted</p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
<% else %>
  <div class="admin-card">
    <div class="section-header">
      <h3>Change History</h3>
    </div>
    <div class="empty-state">
      <p>No changes recorded for this record.</p>
    </div>
  </div>
<% end %>

