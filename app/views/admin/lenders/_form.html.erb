<%= form_with model: [:admin, lender], local: true, class: "admin-form" do |form| %>
  <% if lender.errors.any? %>
    <div class="form-errors">
      <h4><%= pluralize(lender.errors.count, "error") %> prohibited this lender from being saved:</h4>
      <ul>
        <% lender.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-grid">
    <!-- Basic Information -->
    <div class="form-section">
      <h4>Basic Information</h4>
      
      <div class="form-group">
        <%= form.label :name, class: "form-label" %>
        <%= form.text_field :name, class: "form-input", placeholder: "Enter lender name" %>
        <% if lender.errors[:name].any? %>
          <div class="field-error"><%= lender.errors[:name].first %></div>
        <% end %>
      </div>
      
      <div class="form-group">
        <%= form.label :lender_type, class: "form-label" %>
        <%= form.select :lender_type, 
            options_for_select([
              ['Lender', 'lender'], 
              ['Futureproof', 'futureproof']
            ], lender.lender_type), 
            { prompt: 'Select lender type' },
            { class: "form-select" } %>
        <% if lender.errors[:lender_type].any? %>
          <div class="field-error"><%= lender.errors[:lender_type].first %></div>
        <% end %>
        <% if lender.persisted? && lender.lender_type_futureproof? %>
          <div class="field-note">
            <strong>Note:</strong> Only one Futureproof lender is allowed in the system.
          </div>
        <% end %>
      </div>
      
      <div class="form-group">
        <%= form.label :country, class: "form-label" %>
        <%= form.text_field :country, class: "form-input", placeholder: "Enter country", value: lender.country.presence || "Australia" %>
        <% if lender.errors[:country].any? %>
          <div class="field-error"><%= lender.errors[:country].first %></div>
        <% end %>
      </div>
    </div>

    <!-- Address Information -->
    <div class="form-section">
      <h4>Address Information</h4>
      
      <div class="form-group">
        <%= form.label :address, class: "form-label" %>
        <%= form.text_area :address, class: "form-textarea", placeholder: "Enter lender address", rows: 3 %>
        <% if lender.errors[:address].any? %>
          <div class="field-error"><%= lender.errors[:address].first %></div>
        <% end %>
      </div>
      
      <div class="form-group">
        <%= form.label :postcode, class: "form-label" %>
        <%= form.text_field :postcode, class: "form-input", placeholder: "Enter postcode" %>
        <% if lender.errors[:postcode].any? %>
          <div class="field-error"><%= lender.errors[:postcode].first %></div>
        <% end %>
      </div>
    </div>

    <!-- Contact Information -->
    <div class="form-section">
      <h4>Contact Information</h4>
      
      <div class="form-group">
        <%= form.label :contact_email, class: "form-label" %>
        <%= form.email_field :contact_email, class: "form-input", placeholder: "Enter contact email" %>
        <% if lender.errors[:contact_email].any? %>
          <div class="field-error"><%= lender.errors[:contact_email].first %></div>
        <% end %>
      </div>
      
      <div class="form-group">
        <%= form.label :contact_telephone_country_code, "Phone Country Code", class: "form-label" %>
        <%= form.select :contact_telephone_country_code, 
            options_for_select([
              ['+61 (Australia)', '+61'],
              ['+1 (US/Canada)', '+1'],
              ['+44 (UK)', '+44'],
              ['+33 (France)', '+33'],
              ['+49 (Germany)', '+49'],
              ['+81 (Japan)', '+81'],
              ['+86 (China)', '+86']
            ], lender.contact_telephone_country_code.presence || '+61'), 
            {},
            { class: "form-select" } %>
        <% if lender.errors[:contact_telephone_country_code].any? %>
          <div class="field-error"><%= lender.errors[:contact_telephone_country_code].first %></div>
        <% end %>
      </div>
      
      <div class="form-group">
        <%= form.label :contact_telephone, "Phone Number", class: "form-label" %>
        <%= form.telephone_field :contact_telephone, class: "form-input", placeholder: "Enter phone number (without country code)" %>
        <% if lender.errors[:contact_telephone].any? %>
          <div class="field-error"><%= lender.errors[:contact_telephone].first %></div>
        <% end %>
        <div class="field-help">
          Enter the phone number without the country code (e.g., 0432212713)
        </div>
      </div>
    </div>
  </div>

  <div class="form-actions">
    <%= form.submit lender.persisted? ? "Update Lender" : "Create Lender", class: "admin-btn admin-btn-primary" %>
    <%= link_to "Cancel", lender.persisted? ? admin_lender_path(lender) : admin_lenders_path, class: "admin-btn admin-btn-secondary" %>
  </div>
<% end %>

<style>
.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
  gap: 32px;
  margin-bottom: 32px;
}

.form-section {
  background: #f8fafc;
  border-radius: 8px;
  padding: 24px;
  border: 1px solid #e2e8f0;
}

.form-section h4 {
  margin: 0 0 20px 0;
  font-size: 16px;
  font-weight: 600;
  color: #374151;
  border-bottom: 2px solid #e2e8f0;
  padding-bottom: 8px;
}

.form-group {
  display: flex;
  flex-direction: column;
  gap: 8px;
  margin-bottom: 20px;
}

.form-group:last-child {
  margin-bottom: 0;
}

.form-label {
  font-weight: 600;
  color: #374151;
  font-size: 14px;
}

.form-input,
.form-select,
.form-textarea {
  padding: 12px;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-size: 16px;
  background: white;
  transition: border-color 0.2s, box-shadow 0.2s;
}

.form-input:focus,
.form-select:focus,
.form-textarea:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.form-textarea {
  resize: vertical;
  min-height: 80px;
}

.form-actions {
  display: flex;
  gap: 16px;
  padding-top: 24px;
  border-top: 1px solid #e5e7eb;
}

.form-errors {
  background-color: #fef2f2;
  border: 1px solid #fecaca;
  border-radius: 6px;
  padding: 16px;
  margin-bottom: 24px;
}

.form-errors h4 {
  color: #dc2626;
  margin: 0 0 8px 0;
  font-size: 14px;
  font-weight: 600;
}

.form-errors ul {
  margin: 0;
  padding-left: 16px;
}

.form-errors li {
  color: #dc2626;
  font-size: 14px;
}

.field-error {
  color: #dc2626;
  font-size: 14px;
  margin-top: 4px;
}

.field-help {
  color: #6b7280;
  font-size: 12px;
  margin-top: 4px;
}

.field-note {
  color: #7c3aed;
  font-size: 12px;
  margin-top: 4px;
  padding: 8px;
  background-color: #ede9fe;
  border-radius: 4px;
}

/* Mobile responsive */
@media (max-width: 768px) {
  .form-grid {
    grid-template-columns: 1fr;
    gap: 20px;
  }
  
  .form-section {
    padding: 16px;
  }
  
  .form-actions {
    flex-direction: column;
  }
}
</style>