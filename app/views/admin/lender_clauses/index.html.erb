<% content_for :page_title, "#{@lender.name} - Lender Clauses" %>

<div class="admin-actions-bar">
  <div>
    <%= link_to "â† Back to Lender", admin_lender_path(@lender), class: "admin-btn admin-btn-secondary" %>
  </div>
  
  <div class="admin-actions">
    <%= link_to "New Clause", new_admin_lender_lender_clause_path(@lender), class: "admin-btn admin-btn-primary" %>
  </div>
</div>

<div class="admin-lender-clause-overview">
  <div class="admin-overview-header">
    <h2><%= @lender.name %> Clauses</h2>
    <div class="admin-clause-summary-badges">
      <span class="admin-summary-badge">
        <%= @lender_clauses.count %> clause<%= @lender_clauses.count == 1 ? '' : 's' %>
      </span>
      <% if @active_clause %>
        <span class="admin-summary-badge active">
          Active: v<%= @active_clause.version %>
        </span>
      <% else %>
        <span class="admin-summary-badge inactive">
          No Active Clause
        </span>
      <% end %>
    </div>
  </div>
  
  <div class="admin-clause-details">
    <div class="detail-row">
      <div class="detail-label">Total Clauses:</div>
      <div class="detail-value"><%= @lender_clauses.count %></div>
    </div>
    
    <div class="detail-row">
      <div class="detail-label">Published:</div>
      <div class="detail-value"><%= @lender.published_clauses_count %></div>
    </div>
    
    <div class="detail-row">
      <div class="detail-label">Active:</div>
      <div class="detail-value primary"><%= @lender.active_clauses_count %></div>
    </div>
    
    <div class="detail-row">
      <div class="detail-label">Latest Version:</div>
      <div class="detail-value">
        <% if @lender.latest_clause %>
          v<%= @lender.latest_clause.version %>
        <% else %>
          None
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Clauses List -->
<div class="admin-clauses-section">
  <% if @lender_clauses.any? %>
    <div class="admin-clauses-grid">
      <% @lender_clauses.each do |clause| %>
        <div class="admin-clause-card">
          <div class="admin-clause-info">
            <h5><%= clause.title %></h5>
            <div class="admin-clause-meta">
              <span class="version-badge">v<%= clause.version %></span>
              <span class="status-badge status-<%= clause.status_color %>">
                <%= clause.status %>
              </span>
            </div>
            <% if clause.description.present? %>
              <p class="admin-clause-description"><%= truncate(clause.description, length: 100) %></p>
            <% end %>
            <p class="admin-clause-updated">Updated <%= clause.formatted_last_updated %></p>
            <% if clause.created_by %>
              <p class="admin-clause-created-by">Created by <%= clause.created_by.full_name %></p>
            <% end %>
          </div>
          <div class="admin-clause-actions">
            <%= link_to "View", admin_lender_lender_clause_path(@lender, clause), class: "admin-btn admin-btn-sm admin-btn-secondary" %>
            <% if clause.draft? %>
              <%= link_to "Edit", edit_admin_lender_lender_clause_path(@lender, clause), class: "admin-btn admin-btn-sm admin-btn-primary" %>
              <%= button_to "Delete", admin_lender_lender_clause_path(@lender, clause), 
                  method: :delete, 
                  data: { 
                    confirm: "Are you sure you want to delete this clause? This action cannot be undone."
                  },
                  class: "admin-btn admin-btn-sm admin-btn-danger" %>
            <% elsif clause.published? && !clause.is_active? %>
              <%= button_to "Activate", activate_admin_lender_lender_clause_path(@lender, clause), 
                  method: :patch, 
                  data: { 
                    confirm: "Are you sure you want to activate this clause? This will deactivate any currently active clause."
                  },
                  class: "admin-btn admin-btn-sm admin-btn-success" %>
            <% elsif clause.is_active? %>
              <%= button_to "Deactivate", deactivate_admin_lender_lender_clause_path(@lender, clause), 
                  method: :patch, 
                  data: { 
                    confirm: "Are you sure you want to deactivate this clause?"
                  },
                  class: "admin-btn admin-btn-sm admin-btn-warning" %>
            <% end %>
            <% if clause.draft? %>
              <%= button_to "Publish", publish_admin_lender_lender_clause_path(@lender, clause), 
                  method: :patch, 
                  data: { 
                    confirm: "Are you sure you want to publish this clause? Published clauses cannot be edited."
                  },
                  class: "admin-btn admin-btn-sm admin-btn-info" %>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="admin-empty-clauses">
      <div class="admin-empty-icon">ðŸ“„</div>
      <h5>No Clauses Yet</h5>
      <p>Create the first clause for this lender using the "New Clause" button above.</p>
      <p class="admin-empty-hint">Clauses allow lenders to insert their own terms into mortgage contracts with full version control.</p>
    </div>
  <% end %>
</div>
