<% content_for :page_title, "#{@lender_clause.title} - #{@lender.name}" %>

<div class="admin-actions-bar">
  <div>
    <%= link_to "â† Back to Clauses", admin_lender_lender_clauses_path(@lender), class: "admin-btn admin-btn-secondary" %>
  </div>
  
  <div class="admin-actions">
    <% if @lender_clause.draft? %>
      <%= link_to "Edit", edit_admin_lender_lender_clause_path(@lender, @lender_clause), class: "admin-btn admin-btn-primary" %>
      <%= button_to "Publish", publish_admin_lender_lender_clause_path(@lender, @lender_clause), 
          method: :patch, 
          data: { 
            confirm: "Are you sure you want to publish this clause? Published clauses cannot be edited."
          },
          class: "admin-btn admin-btn-info" %>
      <%= button_to "Delete", admin_lender_lender_clause_path(@lender, @lender_clause), 
          method: :delete, 
          data: { 
            confirm: "Are you sure you want to delete this clause? This action cannot be undone."
          },
          class: "admin-btn admin-btn-danger" %>
    <% elsif @lender_clause.published? && !@lender_clause.is_active? %>
      <%= button_to "Activate", activate_admin_lender_lender_clause_path(@lender, @lender_clause), 
          method: :patch, 
          data: { 
            confirm: "Are you sure you want to activate this clause? This will deactivate any currently active clause."
          },
          class: "admin-btn admin-btn-success" %>
    <% elsif @lender_clause.is_active? %>
      <%= button_to "Deactivate", deactivate_admin_lender_lender_clause_path(@lender, @lender_clause), 
          method: :patch, 
          data: { 
            confirm: "Are you sure you want to deactivate this clause?"
          },
          class: "admin-btn admin-btn-warning" %>
    <% end %>
  </div>
</div>

<div class="clause-overview">
  <div class="overview-header">
    <div class="clause-title-section">
      <h2><%= @lender_clause.title %></h2>
      <div class="clause-meta">
        <span class="version-badge">v<%= @lender_clause.version %></span>
        <span class="status-badge status-<%= @lender_clause.status_color %>">
          <%= @lender_clause.status %>
        </span>
      </div>
    </div>
    <div class="clause-info">
      <div class="info-item">
        <span class="info-label">Lender:</span>
        <span class="info-value"><%= @lender.name %></span>
      </div>
      <div class="info-item">
        <span class="info-label">Last Updated:</span>
        <span class="info-value"><%= @lender_clause.formatted_last_updated %></span>
      </div>
      <% if @lender_clause.created_by %>
        <div class="info-item">
          <span class="info-label">Created By:</span>
          <span class="info-value"><%= @lender_clause.created_by.full_name %></span>
        </div>
      <% end %>
    </div>
  </div>
  
  <% if @lender_clause.description.present? %>
    <div class="clause-description">
      <h4>Description</h4>
      <p><%= @lender_clause.description %></p>
    </div>
  <% end %>
</div>

<!-- Clause Content -->
<div class="clause-content-section">
  <h3>Clause Content</h3>
  <div class="content-tabs" data-controller="tabs">
    <div class="tab-buttons">
      <button class="tab-button active" data-tabs-target="button" data-action="click->tabs#switch" data-tab="rendered">
        Rendered View
      </button>
      <button class="tab-button" data-tabs-target="button" data-action="click->tabs#switch" data-tab="source">
        Source Code
      </button>
    </div>
    
    <div class="tab-content">
      <div class="tab-panel active" data-tabs-target="panel" data-tab="rendered">
        <div class="rendered-content">
          <%= @lender_clause.rendered_preview_content.html_safe %>
        </div>
      </div>
      
      <div class="tab-panel" data-tabs-target="panel" data-tab="source">
        <div class="source-content">
          <pre><code><%= @lender_clause.content %></code></pre>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Contract Usage -->
<div class="contract-usage-section">
  <h3>Contract Usage</h3>
  
  <% if @contract_usages.any? %>
    <div class="usage-summary">
      <div class="summary-stats">
        <div class="stat-item">
          <span class="stat-value"><%= @contract_usages.count %></span>
          <span class="stat-label">Total Usages</span>
        </div>
        <div class="stat-item">
          <span class="stat-value"><%= @contract_usages.active.count %></span>
          <span class="stat-label">Active</span>
        </div>
        <div class="stat-item">
          <span class="stat-value"><%= @contract_usages.inactive.count %></span>
          <span class="stat-label">Removed</span>
        </div>
      </div>
    </div>
    
    <div class="usage-list">
      <% @contract_usages.order(:added_at).each do |usage| %>
        <div class="usage-item">
          <div class="usage-header">
            <div class="usage-contract">
              <h5>
                <%= link_to usage.mortgage_contract.title, 
                    admin_mortgage_mortgage_contract_path(usage.mortgage_contract.mortgage, usage.mortgage_contract),
                    class: "contract-link" %>
              </h5>
              <div class="contract-info">
                <span class="contract-version">Contract v<%= usage.contract_version_at_usage %></span>
                <span class="clause-version">Clause v<%= usage.clause_version_at_usage %></span>
              </div>
            </div>
            
            <div class="usage-status">
              <span class="status-badge <%= usage.active? ? 'status-active' : 'status-inactive' %>">
                <%= usage.active? ? 'Active' : 'Removed' %>
              </span>
              <span class="position-badge">
                <%= usage.clause_position.name %>
              </span>
            </div>
          </div>
          
          <div class="usage-details">
            <div class="usage-timeline">
              <div class="timeline-item">
                <span class="timeline-label">Added:</span>
                <span class="timeline-value">
                  <%= usage.formatted_added_at %>
                  <% if usage.added_by %>
                    by <%= usage.added_by_name %>
                  <% end %>
                </span>
              </div>
              
              <% if usage.removed? %>
                <div class="timeline-item">
                  <span class="timeline-label">Removed:</span>
                  <span class="timeline-value">
                    <%= usage.formatted_removed_at %>
                    <% if usage.removed_by %>
                      by <%= usage.removed_by_name %>
                    <% end %>
                  </span>
                </div>
                
                <% if usage.duration_active %>
                  <div class="timeline-item">
                    <span class="timeline-label">Duration:</span>
                    <span class="timeline-value"><%= usage.duration_active %></span>
                  </div>
                <% end %>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-usage">
      <div class="empty-icon">ðŸ“„</div>
      <h5>No Contract Usage Yet</h5>
      <p>This clause hasn't been added to any contracts yet.</p>
      <% if @lender_clause.is_active? %>
        <p class="usage-hint">Since this clause is active, it can be added to contracts from the mortgage contract view.</p>
      <% elsif @lender_clause.published? %>
        <p class="usage-hint">Activate this clause to make it available for adding to contracts.</p>
      <% else %>
        <p class="usage-hint">Publish and activate this clause to make it available for adding to contracts.</p>
      <% end %>
    </div>
  <% end %>
</div>

<!-- Insertion Points Reference -->
<div class="insertion-points-section">
  <h3>Available Insertion Points</h3>
  <div class="positions-grid">
    <% @clause_positions.each do |position| %>
      <div class="position-card">
        <h5><%= position.name %></h5>
        <p><%= position.description %></p>
        <div class="position-meta">
          <span class="order-badge">Order: <%= position.display_order %></span>
        </div>
      </div>
    <% end %>
  </div>
</div>

