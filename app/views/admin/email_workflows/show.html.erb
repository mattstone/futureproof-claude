<% content_for :title, @workflow.name %>
<% content_for :breadcrumb do %>
  <%= link_to "Email Workflows", admin_email_workflows_path, class: "breadcrumb-link" %>
  <span class="breadcrumb-separator">â†’</span>
  <span><%= @workflow.name %></span>
<% end %>

<div class="workflow-detail">
  <!-- Header with actions -->
  <div class="workflow-detail-header">
    <div class="flex items-center justify-between">
      <div class="workflow-title-section">
        <h1 class="workflow-title">
          <%= @workflow.name %>
          <span class="status-badge <%= @workflow.active? ? 'active' : 'inactive' %>">
            <%= @workflow.active? ? 'Active' : 'Inactive' %>
          </span>
        </h1>
        <% if @workflow.description.present? %>
          <p class="workflow-description"><%= @workflow.description %></p>
        <% end %>
      </div>
      
      <div class="workflow-actions">
        <%= link_to edit_admin_email_workflow_path(@workflow), class: "btn-secondary" do %>
          <i class="fas fa-edit"></i> Edit
        <% end %>
        <%= link_to preview_admin_email_workflow_path(@workflow), class: "btn-secondary" do %>
          <i class="fas fa-search"></i> Preview
        <% end %>
        <%= link_to toggle_active_admin_email_workflow_path(@workflow), 
                   method: :patch, class: "btn-secondary" do %>
          <i class="fas fa-<%= @workflow.active? ? 'pause' : 'play' %>"></i> 
          <%= @workflow.active? ? 'Deactivate' : 'Activate' %>
        <% end %>
        <%= link_to duplicate_admin_email_workflow_path(@workflow), 
                   method: :post, class: "btn-secondary" do %>
          <i class="fas fa-copy"></i> Duplicate
        <% end %>
      </div>
    </div>
  </div>

  <div class="workflow-content-grid">
    <!-- Left Column: Workflow Configuration -->
    <div class="workflow-config">
      <!-- Basic Info -->
      <div class="config-section">
        <h3 class="section-title">Configuration</h3>
        <div class="config-grid">
          <div class="config-item">
            <label>Trigger Type</label>
            <span class="trigger-badge"><%= @workflow.trigger_type.humanize %></span>
          </div>
          
          <div class="config-item">
            <label>Created By</label>
            <span><%= @workflow.created_by.display_name %></span>
          </div>
          
          <div class="config-item">
            <label>Created</label>
            <span><%= @workflow.created_at.strftime('%b %d, %Y at %I:%M %p') %></span>
          </div>
          
          <div class="config-item">
            <label>Last Updated</label>
            <span><%= @workflow.updated_at.strftime('%b %d, %Y at %I:%M %p') %></span>
          </div>
        </div>
        
        <!-- Trigger Conditions -->
        <% if @workflow.trigger_conditions.present? && @workflow.trigger_conditions.any? %>
          <div class="trigger-conditions">
            <h4>Trigger Conditions</h4>
            <div class="conditions-list">
              <% @workflow.trigger_conditions.each do |key, value| %>
                <div class="condition-item">
                  <span class="condition-key"><%= key.humanize %>:</span>
                  <span class="condition-value"><%= value %></span>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>

      <!-- Workflow Steps -->
      <div class="config-section">
        <h3 class="section-title">Workflow Steps (<%= @workflow.workflow_steps.count %>)</h3>
        <div class="steps-list">
          <% @workflow.workflow_steps.ordered.each_with_index do |step, index| %>
            <div class="step-item">
              <div class="step-number"><%= index + 1 %></div>
              <div class="step-icon-container">
                <%= render 'step_icon', step: step %>
              </div>
              <div class="step-content">
                <div class="step-header">
                  <h4 class="step-name">
                    <%= step.name.present? ? step.name : step.step_type.humanize %>
                  </h4>
                  <span class="step-type"><%= step.step_type.humanize %></span>
                </div>
                
                <% if step.description.present? %>
                  <p class="step-description"><%= step.description %></p>
                <% end %>
                
                <!-- Step Configuration -->
                <div class="step-config">
                  <% case step.step_type %>
                  <% when 'send_email' %>
                    <% if step.configuration['email_template_id'].present? %>
                      <% template = EmailTemplate.find_by(id: step.configuration['email_template_id']) %>
                      <div class="config-detail">
                        <i class="fas fa-envelope"></i>
                        Template: <%= template ? link_to(template.name, admin_email_template_path(template), class: 'config-link') : 'Not found' %>
                      </div>
                    <% end %>
                  <% when 'delay' %>
                    <div class="config-detail">
                      <i class="fas fa-clock"></i>
                      Wait: <%= step.configuration['duration'] %> <%= step.configuration['unit'] %>
                    </div>
                  <% when 'condition' %>
                    <div class="config-detail">
                      <i class="fas fa-code-branch"></i>
                      Type: <%= step.configuration['condition_type']&.humanize %>
                      <% if step.configuration['expected_status'].present? %>
                        <br>Expected: <%= step.configuration['expected_status'] %>
                      <% end %>
                    </div>
                  <% when 'update_status' %>
                    <div class="config-detail">
                      <i class="fas fa-edit"></i>
                      Update <%= step.configuration['field'] %> to <%= step.configuration['value'] %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
            
            <% unless step == @workflow.workflow_steps.ordered.last %>
              <div class="step-connector"></div>
            <% end %>
          <% end %>
          
          <% if @workflow.workflow_steps.empty? %>
            <div class="empty-steps">
              <i class="fas fa-plus-circle"></i>
              <p>No steps configured yet</p>
              <%= link_to edit_admin_email_workflow_path(@workflow), class: "btn-primary" do %>
                Add Steps
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Right Column: Execution Statistics -->
    <div class="workflow-stats">
      <!-- Execution Overview -->
      <div class="stats-section">
        <h3 class="section-title">Execution Statistics</h3>
        <div class="stats-grid">
          <div class="stat-card">
            <div class="stat-number"><%= @execution_stats[:total] %></div>
            <div class="stat-label">Total Executions</div>
          </div>
          <div class="stat-card">
            <div class="stat-number success"><%= @execution_stats[:completed] %></div>
            <div class="stat-label">Completed</div>
          </div>
          <div class="stat-card">
            <div class="stat-number running"><%= @execution_stats[:running] %></div>
            <div class="stat-label">Running</div>
          </div>
          <div class="stat-card">
            <div class="stat-number pending"><%= @execution_stats[:pending] %></div>
            <div class="stat-label">Pending</div>
          </div>
          <div class="stat-card">
            <div class="stat-number failed"><%= @execution_stats[:failed] %></div>
            <div class="stat-label">Failed</div>
          </div>
          <div class="stat-card">
            <div class="stat-number rate"><%= @execution_stats[:success_rate] %>%</div>
            <div class="stat-label">Success Rate</div>
          </div>
        </div>
      </div>

      <!-- Recent Executions -->
      <% if @executions.any? %>
        <div class="stats-section">
          <h3 class="section-title">Recent Executions</h3>
          <div class="executions-list">
            <% @executions.limit(10).each do |execution| %>
              <div class="execution-item">
                <div class="execution-status">
                  <span class="status-indicator <%= execution.status %>"></span>
                </div>
                <div class="execution-details">
                  <div class="execution-target">
                    <% if execution.target.respond_to?(:user) %>
                      <%= execution.target.user.display_name %>
                    <% elsif execution.target.respond_to?(:display_name) %>
                      <%= execution.target.display_name %>
                    <% else %>
                      <%= execution.target.class.name %> #<%= execution.target.id %>
                    <% end %>
                  </div>
                  <div class="execution-meta">
                    <span class="execution-time">
                      <%= time_ago_in_words(execution.created_at) %> ago
                    </span>
                    <% if execution.completed_at %>
                      <span class="execution-duration">
                        (<%= distance_of_time_in_words(execution.created_at, execution.completed_at) %>)
                      </span>
                    <% end %>
                  </div>
                </div>
                <div class="execution-progress">
                  <% if execution.status == 'completed' %>
                    <i class="fas fa-check-circle text-green-500"></i>
                  <% elsif execution.status == 'failed' %>
                    <i class="fas fa-times-circle text-red-500"></i>
                  <% elsif execution.status == 'running' %>
                    <i class="fas fa-play-circle text-blue-500"></i>
                  <% else %>
                    <i class="fas fa-clock text-gray-400"></i>
                  <% end %>
                </div>
              </div>
            <% end %>
            
            <% if @executions.count > 10 %>
              <div class="execution-item more">
                <div class="more-executions">
                  +<%= @executions.count - 10 %> more executions
                </div>
              </div>
            <% end %>
          </div>
        </div>
      <% else %>
        <div class="stats-section">
          <div class="empty-executions">
            <i class="fas fa-play-circle"></i>
            <h4>No Executions Yet</h4>
            <p>This workflow hasn't been triggered yet. Executions will appear here when the workflow runs.</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

