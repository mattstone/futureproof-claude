    <option value="income_and_loan_options" <%= 'selected' if config['to_status'] == 'income_and_loan_options' %>>Income and Loan Options</option>
    <option value="submitted" <%= 'selected' if config['to_status'] == 'submitted' %>>Submitted</option>
    <option value="processing" <%= 'selected' if config['to_status'] == 'processing' %>>Processing</option>
    <option value="rejected" <%= 'selected' if config['to_status'] == 'rejected' %>>Rejected</option>
    <option value="accepted" <%= 'selected' if config['to_status'] == 'accepted' %>>Accepted</option>
  </select>
</div>