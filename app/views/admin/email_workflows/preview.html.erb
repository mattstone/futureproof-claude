<% content_for :title, "Preview: #{@workflow.name}" %>
<% content_for :breadcrumb do %>
  <%= link_to "Workflows", admin_email_workflows_path, class: "breadcrumb-link" %>
  <span class="breadcrumb-separator">→</span>
  <%= link_to @workflow.name, admin_email_workflow_path(@workflow), class: "breadcrumb-link" %>
  <span class="breadcrumb-separator">→</span>
  <span>Preview</span>
<% end %>

<div class="workflow-preview">
  <div class="preview-header">
    <div class="flex items-center justify-between">
      <div class="preview-title-section">
        <h1>Workflow Preview</h1>
        <p>See how "<%= @workflow.name %>" will execute with sample data</p>
      </div>
      
      <div class="preview-actions">
        <%= link_to edit_admin_email_workflow_path(@workflow), class: "site-btn-secondary" do %>
          <i class="fas fa-edit"></i> Edit Workflow
        <% end %>
        <%= link_to admin_email_workflow_path(@workflow), class: "site-btn-secondary" do %>
          <i class="fas fa-arrow-left"></i> Back to Workflow
        <% end %>
      </div>
    </div>
  </div>

  <div class="preview-content">
    <!-- Workflow Overview -->
    <div class="preview-section">
      <div class="section-header">
        <h3>Workflow Configuration</h3>
        <span class="status-badge <%= @workflow.active? ? 'active' : 'inactive' %>">
          <%= @workflow.active? ? 'Active' : 'Inactive' %>
        </span>
      </div>
      
      <div class="config-overview">
        <div class="config-item">
          <label>Trigger:</label>
          <span><%= @workflow.trigger_type.humanize %></span>
        </div>
        <% if @workflow.trigger_conditions.present? && @workflow.trigger_conditions.any? %>
          <div class="config-item">
            <label>Conditions:</label>
            <div class="conditions-list">
              <% @workflow.trigger_conditions.each do |key, value| %>
                <span class="condition-tag"><%= key.humanize %>: <%= value %></span>
              <% end %>
            </div>
          </div>
        <% end %>
        <div class="config-item">
          <label>Steps:</label>
          <span><%= pluralize(@workflow.workflow_steps.count, 'step') %></span>
        </div>
      </div>
    </div>

    <!-- Sample Data -->
    <div class="preview-section">
      <div class="section-header">
        <h3>Sample Data</h3>
        <p>This workflow will use the following sample data for preview</p>
      </div>
      
      <div class="sample-data">
        <% @sample_data.each do |category, data| %>
          <div class="data-category">
            <h4><%= category.to_s.humanize %></h4>
            <div class="data-fields">
              <% data.each do |key, value| %>
                <div class="data-field">
                  <span class="field-key">{{ <%= category %>.<%= key %> }}</span>
                  <span class="field-value"><%= value %></span>
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Workflow Steps Preview -->
    <div class="preview-section">
      <div class="section-header">
        <h3>Workflow Execution Flow</h3>
        <p>How this workflow will execute step by step</p>
      </div>
      
      <div class="workflow-flow">
        <% if @workflow.workflow_steps.any? %>
          <% @workflow.workflow_steps.ordered.each_with_index do |step, index| %>
            <div class="flow-step">
              <div class="step-indicator">
                <div class="step-number"><%= index + 1 %></div>
                <div class="step-icon">
                  <%= render 'step_icon', step: step %>
                </div>
              </div>
              
              <div class="step-details">
                <div class="step-header">
                  <h4><%= step.name.present? ? step.name : step.step_type.humanize %></h4>
                  <span class="step-type-badge"><%= step.step_type.humanize %></span>
                </div>
                
                <% if step.description.present? %>
                  <p class="step-description"><%= step.description %></p>
                <% end %>
                
                <div class="step-preview-content">
                  <%= render 'step_preview', step: step, sample_data: @sample_data %>
                </div>
              </div>
            </div>
            
            <% unless step == @workflow.workflow_steps.ordered.last %>
              <div class="flow-connector">
                <div class="connector-line"></div>
                <div class="connector-arrow">↓</div>
              </div>
            <% end %>
          <% end %>
          
          <!-- Completion Step -->
          <div class="flow-step completion-step">
            <div class="step-indicator">
              <div class="step-number">✓</div>
              <div class="step-icon completion">
                <i class="fas fa-flag-checkered"></i>
              </div>
            </div>
            
            <div class="step-details">
              <div class="step-header">
                <h4>Workflow Complete</h4>
                <span class="step-type-badge success">Finished</span>
              </div>
              <p class="step-description">All workflow steps have been executed successfully.</p>
            </div>
          </div>
        <% else %>
          <div class="empty-workflow">
            <i class="fas fa-exclamation-triangle"></i>
            <h4>No Steps Configured</h4>
            <p>This workflow doesn't have any steps yet. Add steps to see the execution flow.</p>
            <%= link_to edit_admin_email_workflow_path(@workflow), class: "site-btn-primary" do %>
              <i class="fas fa-plus"></i> Add Steps
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <!-- Execution History (if any) -->
    <% if @workflow.workflow_executions.any? %>
      <div class="preview-section">
        <div class="section-header">
          <h3>Recent Executions</h3>
          <p>Last 5 times this workflow was executed</p>
        </div>
        
        <div class="execution-history">
          <% @workflow.workflow_executions.order(created_at: :desc).limit(5).each do |execution| %>
            <div class="execution-item">
              <div class="execution-status">
                <span class="status-indicator <%= execution.status %>"></span>
                <span class="status-text"><%= execution.status.humanize %></span>
              </div>
              
              <div class="execution-details">
                <div class="execution-target">
                  Target: 
                  <% if execution.target.respond_to?(:user) %>
                    <%= execution.target.user.display_name %>
                  <% elsif execution.target.respond_to?(:display_name) %>
                    <%= execution.target.display_name %>
                  <% else %>
                    <%= execution.target.class.name %> #<%= execution.target.id %>
                  <% end %>
                </div>
                <div class="execution-time">
                  <%= time_ago_in_words(execution.created_at) %> ago
                  <% if execution.completed_at %>
                    (took <%= distance_of_time_in_words(execution.created_at, execution.completed_at) %>)
                  <% end %>
                </div>
              </div>
              
              <% if execution.workflow_step_executions.any? %>
                <div class="execution-progress">
                  <div class="progress-bar">
                    <% total_steps = @workflow.workflow_steps.count %>
                    <% completed_steps = execution.workflow_step_executions.where(status: 'completed').count %>
                    <% progress = total_steps > 0 ? (completed_steps.to_f / total_steps * 100).round : 0 %>
                    <div class="progress-fill" data-width="<%= progress %>"></div>
                  </div>
                  <span class="progress-text"><%= completed_steps %>/<%= total_steps %> steps</span>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>

