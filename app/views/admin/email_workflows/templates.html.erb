  <span class="breadcrumb-separator">→</span>
  <span>Templates</span>
<% end %>

<div class="workflow-templates">
  <!-- Header -->
  <div class="templates-header">
    <div class="flex items-center justify-between">
      <div class="header-content">
        <h1>Customer Lifecycle Workflow Templates</h1>
        <p>Pre-built workflows designed for the complete customer journey from onboarding to contract completion.</p>
      </div>
      
      <div class="header-actions">
        <%= link_to new_admin_email_workflow_path, class: "btn-secondary" do %>
          <i class="fas fa-plus"></i> Create Custom Workflow
        <% end %>
        <%= link_to admin_email_workflows_path, class: "btn-secondary" do %>
          <i class="fas fa-list"></i> View All Workflows
        <% end %>
      </div>
    </div>
  </div>

  <!-- Customer Lifecycle Overview -->
  <div class="lifecycle-overview">
    <div class="section-header">
      <h2>Complete Customer Lifecycle</h2>
      <p>These templates work together to create a seamless experience from first contact to contract completion.</p>
    </div>
    
    <div class="lifecycle-flow">
      <div class="lifecycle-stage onboarding">
        <div class="stage-header">
          <div class="stage-icon">
            <i class="fas fa-user-plus"></i>
          </div>
          <h3>Onboarding</h3>
          <span class="stage-count"><%= @customer_lifecycle[:onboarding].count %> templates</span>
        </div>
        <div class="stage-description">
          Welcome new customers and guide them through initial setup and account activation.
        </div>
      </div>
      
      <div class="lifecycle-arrow">→</div>
      
      <div class="lifecycle-stage operational">
        <div class="stage-header">
          <div class="stage-icon">
            <i class="fas fa-cogs"></i>
          </div>
          <h3>Operations</h3>
          <span class="stage-count"><%= @customer_lifecycle[:operational].count %> templates</span>
        </div>
        <div class="stage-description">
          Manage ongoing interactions, applications, document uploads, and status updates.
        </div>
      </div>
      
      <div class="lifecycle-arrow">→</div>
      
      <div class="lifecycle-stage end-of-contract">
        <div class="stage-header">
          <div class="stage-icon">
            <i class="fas fa-handshake"></i>
          </div>
          <h3>Contract Completion</h3>
          <span class="stage-count"><%= @customer_lifecycle[:end_of_contract].count %> templates</span>
        </div>
        <div class="stage-description">
          Handle contract signing, completion notifications, and transition to ongoing services.
        </div>
      </div>
    </div>
  </div>

  <!-- Template Categories -->
  <% @template_categories.each do |category, templates| %>
    <div class="template-category">
      <div class="category-header">
        <div class="category-info">
          <h2>
            <%= case category
                when 'onboarding' then 'Onboarding Workflows'
                when 'operational' then 'Operational Workflows'
                when 'end_of_contract' then 'Contract Completion Workflows'
                else category.humanize + ' Workflows'
                end %>
          </h2>
          <p>
            <%= case category
                when 'onboarding' then 'Welcome and activate new customers with guided workflows that ensure a smooth introduction to your services.'
                when 'operational' then 'Manage day-to-day customer interactions including applications, updates, reminders, and document management.'
                when 'end_of_contract' then 'Handle contract finalization, completion notifications, and transition customers to ongoing relationships.'
                else "Templates for #{category.humanize.downcase} processes."
                end %>
          </p>
        </div>
        <div class="category-badge <%= category %>">
          <span><%= pluralize(templates.count, 'template') %></span>
        </div>
      </div>
      
      <div class="templates-grid">
        <% templates.each do |template| %>
          <div class="template-card">
            <div class="template-header">
              <div class="template-icon">
                <%= case template[:trigger_type]
                    when 'user_registered' then '<i class="fas fa-user-plus"></i>'
                    when 'application_created' then '<i class="fas fa-file-alt"></i>'
                    when 'application_status_changed' then '<i class="fas fa-exchange-alt"></i>'
                    when 'contract_signed' then '<i class="fas fa-handshake"></i>'
                    when 'inactivity' then '<i class="fas fa-clock"></i>'
                    when 'document_uploaded' then '<i class="fas fa-upload"></i>'
                    when 'time_delay' then '<i class="fas fa-calendar-alt"></i>'
                    else '<i class="fas fa-cog"></i>'
                    end.html_safe %>
              </div>
              <div class="template-meta">
                <span class="trigger-type"><%= template[:trigger_type].humanize %></span>
              </div>
            </div>
            
            <div class="template-content">
              <h3><%= template[:name] %></h3>
              <p><%= template[:description] %></p>
              
              <div class="template-stats">
                <div class="stat-item">
                  <i class="fas fa-list"></i>
                  <span><%= pluralize(template[:steps].count, 'step') %></span>
                </div>
                <div class="stat-item">
                  <i class="fas fa-bolt"></i>
                  <span>Ready to use</span>
                </div>
              </div>
              
              <!-- Preview steps -->
              <div class="steps-preview">
                <h4>Steps included:</h4>
                <div class="steps-list">
                  <% template[:steps].each_with_index do |step, index| %>
                    <div class="step-mini">
                      <span class="step-number"><%= index + 1 %></span>
                      <span class="step-name"><%= step[:name] %></span>
                      <span class="step-type">(<%= step[:step_type].humanize %>)</span>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
            
            <div class="template-actions">
              <%= link_to new_admin_email_workflow_path(template: template[:name]), 
                         class: "btn-primary template-create-btn" do %>
                <i class="fas fa-plus"></i> Create from Template
              <% end %>
              <button class="btn-secondary template-preview-btn" 
                      data-template="<%= template[:name] %>"
                      onclick="showTemplatePreview(this)">
                <i class="fas fa-eye"></i> Preview
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Quick Setup Section -->
