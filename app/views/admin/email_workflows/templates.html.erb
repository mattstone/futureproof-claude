<script>
// Template preview functionality
function showTemplatePreview(button) {
  const templateName = button.dataset.template;
  const modal = document.getElementById('template-preview-modal');
  const title = document.getElementById('preview-title');
  const content = document.getElementById('preview-content');
  const createBtn = document.getElementById('create-from-preview');
  
  title.textContent = `Preview: ${templateName}`;
  content.innerHTML = '<div class="loading">Loading template preview...</div>';
  
  // Set create button action
  createBtn.onclick = () => {
    window.location.href = '<%= new_admin_email_workflow_path %>?template=' + encodeURIComponent(templateName);
  };
  
  modal.style.display = 'block';
  
  // Load template details (in a real app, this would be an AJAX request)
  setTimeout(() => {
    content.innerHTML = generateTemplatePreview(templateName);
  }, 500);
}

function closeTemplatePreview() {
  document.getElementById('template-preview-modal').style.display = 'none';
}

function generateTemplatePreview(templateName) {
  // This would normally fetch from the server
  const templates = <%= raw @template_categories.values.flatten.to_json %>;
  const template = templates.find(t => t.name === templateName);
  
  if (!template) return '<div class="error">Template not found</div>';
  
  let html = `
    <div class="preview-summary">
      <div class="preview-item">
        <strong>Trigger:</strong> ${template.trigger_type.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}
      </div>
      <div class="preview-item">
        <strong>Category:</strong> ${template.category.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}
      </div>
      <div class="preview-item">
        <strong>Steps:</strong> ${template.steps.length}
      </div>
    </div>
    <div class="preview-description">
      <p>${template.description}</p>
    </div>
    <div class="preview-steps">
      <h4>Workflow Steps:</h4>
  `;
  
  template.steps.forEach((step, index) => {
    html += `
      <div class="preview-step">
        <div class="preview-step-number">${index + 1}</div>
        <div class="preview-step-content">
          <div class="preview-step-name">${step.name}</div>
          <div class="preview-step-type">${step.step_type.replace(/_/g, ' ').replace(/\b\w/g, l => l.toUpperCase())}</div>
          <div class="preview-step-description">${step.description}</div>
        </div>
      </div>
    `;
  });
  
  html += '</div>';
  
  return html;
}

function createAllTemplates() {
  if (confirm('This will create <%= @template_categories.values.flatten.count %> workflow templates. Are you sure?')) {
    // Create a form and submit it
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = '<%= new_admin_email_workflow_path %>';
    form.innerHTML = `
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="hidden" name="create_all_templates" value="true">
    `;
    document.body.appendChild(form);
    form.submit();
  }
}

function createCategoryTemplates(category) {
  const counts = {
    onboarding: <%= @customer_lifecycle[:onboarding].count %>,
    operational: <%= @customer_lifecycle[:operational].count %>,
    end_of_contract: <%= @customer_lifecycle[:end_of_contract].count %>
  };
  
  if (confirm(`This will create ${counts[category]} ${category.replace('_', ' ')} workflow templates. Are you sure?`)) {
    const form = document.createElement('form');
    form.method = 'POST';
    form.action = '<%= new_admin_email_workflow_path %>';
    form.innerHTML = `
      <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
      <input type="hidden" name="create_category_templates" value="${category}">
    `;
    document.body.appendChild(form);
    form.submit();
  }
}
</script>

