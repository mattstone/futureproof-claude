<% content_for :title, "Workflow Templates" %>
<% content_for :breadcrumb do %>
  <%= link_to "Email Workflows", admin_email_workflows_path, class: "breadcrumb-link" %>
  <span class="breadcrumb-separator">→</span>
  <span>Templates</span>
<% end %>

<div class="workflow-templates" data-controller="workflow-templates">
  <!-- Header -->
  <div class="templates-header">
    <div class="flex items-center justify-between">
      <div class="header-content">
        <h1>Customer Lifecycle Workflow Templates</h1>
        <p>Pre-built workflows designed for the complete customer journey from onboarding to contract completion.</p>
      </div>
      
      <div class="header-actions">
        <%= link_to new_admin_email_workflow_path, class: "btn-secondary" do %>
          <i class="fas fa-plus"></i> Create Custom Workflow
        <% end %>
        <%= link_to admin_email_workflows_path, class: "btn-secondary" do %>
          <i class="fas fa-list"></i> View All Workflows
        <% end %>
      </div>
    </div>
  </div>

  <!-- Customer Lifecycle Overview -->
  <div class="lifecycle-overview">
    <div class="section-header">
      <h2>Complete Customer Lifecycle</h2>
      <p>These templates work together to create a seamless experience from first contact to contract completion.</p>
    </div>
    
    <div class="lifecycle-flow">
      <div class="lifecycle-stage onboarding">
        <div class="stage-header">
          <div class="stage-icon">
            <i class="fas fa-user-plus"></i>
          </div>
          <h3>Onboarding</h3>
          <span class="stage-count"><%= @customer_lifecycle[:onboarding].count %> templates</span>
        </div>
        <div class="stage-description">
          Welcome new customers and guide them through initial setup and account activation.
        </div>
      </div>
      
      <div class="lifecycle-arrow">→</div>
      
      <div class="lifecycle-stage operational">
        <div class="stage-header">
          <div class="stage-icon">
            <i class="fas fa-cogs"></i>
          </div>
          <h3>Operations</h3>
          <span class="stage-count"><%= @customer_lifecycle[:operational].count %> templates</span>
        </div>
        <div class="stage-description">
          Manage ongoing interactions, applications, document uploads, and status updates.
        </div>
      </div>
      
      <div class="lifecycle-arrow">→</div>
      
      <div class="lifecycle-stage end-of-contract">
        <div class="stage-header">
          <div class="stage-icon">
            <i class="fas fa-handshake"></i>
          </div>
          <h3>Contract Completion</h3>
          <span class="stage-count"><%= @customer_lifecycle[:end_of_contract].count %> templates</span>
        </div>
        <div class="stage-description">
          Handle contract signing, completion notifications, and transition to ongoing services.
        </div>
      </div>
    </div>
  </div>

  <!-- Template Categories -->
  <% @template_categories.each do |category, templates| %>
    <div class="template-category">
      <div class="category-header">
        <div class="category-info">
          <h2>
            <%= case category
                when 'onboarding' then 'Onboarding Workflows'
                when 'operational' then 'Operational Workflows'
                when 'end_of_contract' then 'Contract Completion Workflows'
                else category.humanize + ' Workflows'
                end %>
          </h2>
          <p>
            <%= case category
                when 'onboarding' then 'Welcome and activate new customers with guided workflows that ensure a smooth introduction to your services.'
                when 'operational' then 'Manage day-to-day customer interactions including applications, updates, reminders, and document management.'
                when 'end_of_contract' then 'Handle contract finalization, completion notifications, and transition customers to ongoing relationships.'
                else "Templates for #{category.humanize.downcase} processes."
                end %>
          </p>
        </div>
        <div class="category-badge <%= category %>">
          <span><%= pluralize(templates.count, 'template') %></span>
        </div>
      </div>
      
      <div class="templates-grid">
        <% templates.each do |template| %>
          <div class="template-card">
            <div class="template-header">
              <div class="template-icon">
                <%= case template[:trigger_type]
                    when 'user_registered' then '<i class="fas fa-user-plus"></i>'
                    when 'application_created' then '<i class="fas fa-file-alt"></i>'
                    when 'application_status_changed' then '<i class="fas fa-exchange-alt"></i>'
                    when 'contract_signed' then '<i class="fas fa-handshake"></i>'
                    when 'inactivity' then '<i class="fas fa-clock"></i>'
                    when 'document_uploaded' then '<i class="fas fa-upload"></i>'
                    when 'time_delay' then '<i class="fas fa-calendar-alt"></i>'
                    else '<i class="fas fa-cog"></i>'
                    end.html_safe %>
              </div>
              <div class="template-meta">
                <span class="trigger-type"><%= template[:trigger_type].humanize %></span>
              </div>
            </div>
            
            <div class="template-content">
              <h3><%= template[:name] %></h3>
              <p><%= template[:description] %></p>
              
              <div class="template-stats">
                <div class="stat-item">
                  <i class="fas fa-list"></i>
                  <span><%= pluralize(template[:steps].count, 'step') %></span>
                </div>
                <div class="stat-item">
                  <i class="fas fa-bolt"></i>
                  <span>Ready to use</span>
                </div>
              </div>
              
              <!-- Preview steps -->
              <div class="steps-preview">
                <h4>Steps included:</h4>
                <div class="steps-list">
                  <% template[:steps].each_with_index do |step, index| %>
                    <div class="step-mini">
                      <span class="step-number"><%= index + 1 %></span>
                      <span class="step-name"><%= step[:name] %></span>
                      <span class="step-type">(<%= step[:step_type].humanize %>)</span>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
            
            <div class="template-actions">
              <%= link_to new_admin_email_workflow_path(template: template[:name]), 
                         class: "btn-primary template-create-btn" do %>
                <i class="fas fa-plus"></i> Create from Template
              <% end %>
              <button class="btn-secondary template-preview-btn" 
                      data-template="<%= template[:name] %>"
                      data-action="click->workflow-templates#showTemplatePreview">
                <i class="fas fa-eye"></i> Preview
              </button>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  <% end %>

  <!-- Quick Setup Section -->
  <div class="quick-setup-section">
    <div class="section-header">
      <h2>Quick Setup Options</h2>
      <p>Choose a setup option to automatically create multiple workflow templates at once. These options help you get started quickly with proven combinations that work well together.</p>
      
      <div class="setup-instructions">
        <div class="instruction-item">
          <i class="fas fa-info-circle"></i>
          <span><strong>How to use:</strong> Click a setup option below to create multiple workflow templates in one action.</span>
        </div>
        <div class="instruction-item">
          <i class="fas fa-edit"></i>
          <span><strong>Customize later:</strong> After creation, you can modify any workflow to match your specific needs.</span>
        </div>
        <div class="instruction-item">
          <i class="fas fa-lightbulb"></i>
          <span><strong>Recommendation:</strong> Start with "Complete Lifecycle Setup" for comprehensive automation coverage.</span>
        </div>
      </div>
    </div>
    
    <div class="quick-setup-cards">
      <div class="setup-card featured">
        <div class="setup-card-header">
          <div class="setup-icon primary">
            <i class="fas fa-rocket"></i>
          </div>
          <div class="setup-badge">Most Popular</div>
        </div>
        <div class="setup-card-content">
          <h3>Complete Lifecycle Setup</h3>
          <p>Create all customer lifecycle workflows at once. Perfect for getting comprehensive automation coverage from day one.</p>
          <div class="setup-features">
            <div class="feature-item">
              <i class="fas fa-check"></i>
              <span>Full customer journey coverage</span>
            </div>
            <div class="feature-item">
              <i class="fas fa-check"></i>
              <span><%= @template_categories.values.flatten.count %> pre-built workflows</span>
            </div>
            <div class="feature-item">
              <i class="fas fa-check"></i>
              <span>Onboarding → Operations → Completion</span>
            </div>
          </div>
        </div>
        <div class="setup-card-footer">
          <button class="btn-primary full-width" 
                  data-template-count="<%= @template_categories.values.flatten.count %>"
                  data-onboarding-count="<%= @customer_lifecycle[:onboarding].count %>"
                  data-operational-count="<%= @customer_lifecycle[:operational].count %>"
                  data-end-contract-count="<%= @customer_lifecycle[:end_of_contract].count %>"
                  data-action="click->workflow-templates#createAllTemplates">
            <i class="fas fa-magic"></i> Create Complete Setup
          </button>
        </div>
      </div>
      
      <div class="setup-card">
        <div class="setup-card-header">
          <div class="setup-icon onboarding">
            <i class="fas fa-user-check"></i>
          </div>
        </div>
        <div class="setup-card-content">
          <h3>Onboarding Focus</h3>
          <p>Start with customer onboarding workflows. Ideal for new businesses focusing on customer acquisition and welcome experiences.</p>
          <div class="setup-features">
            <div class="feature-item">
              <i class="fas fa-user-plus"></i>
              <span>New customer welcome flows</span>
            </div>
            <div class="feature-item">
              <i class="fas fa-envelope"></i>
              <span><%= @customer_lifecycle[:onboarding].count %> onboarding templates</span>
            </div>
            <div class="feature-item">
              <i class="fas fa-clock"></i>
              <span>Quick setup (2-3 minutes)</span>
            </div>
          </div>
        </div>
        <div class="setup-card-footer">
          <button class="btn-secondary full-width" 
                  data-onboarding-count="<%= @customer_lifecycle[:onboarding].count %>"
                  data-operational-count="<%= @customer_lifecycle[:operational].count %>"
                  data-end-contract-count="<%= @customer_lifecycle[:end_of_contract].count %>"
                  data-category="onboarding"
                  data-action="click->workflow-templates#createCategoryTemplates">
            <i class="fas fa-user-plus"></i> Create Onboarding
          </button>
        </div>
      </div>
      
      <div class="setup-card">
        <div class="setup-card-header">
          <div class="setup-icon operational">
            <i class="fas fa-chart-line"></i>
          </div>
        </div>
        <div class="setup-card-content">
          <h3>Operational Essentials</h3>
          <p>Core operational workflows for managing applications, status updates, and ongoing customer communications.</p>
          <div class="setup-features">
            <div class="feature-item">
              <i class="fas fa-cogs"></i>
              <span>Application management flows</span>
            </div>
            <div class="feature-item">
              <i class="fas fa-bell"></i>
              <span><%= @customer_lifecycle[:operational].count %> operational templates</span>
            </div>
            <div class="feature-item">
              <i class="fas fa-sync"></i>
              <span>Status update automation</span>
            </div>
          </div>
        </div>
        <div class="setup-card-footer">
          <button class="btn-secondary full-width"
                  data-onboarding-count="<%= @customer_lifecycle[:onboarding].count %>"
                  data-operational-count="<%= @customer_lifecycle[:operational].count %>"
                  data-end-contract-count="<%= @customer_lifecycle[:end_of_contract].count %>"
                  data-category="operational"
                  data-action="click->workflow-templates#createCategoryTemplates">
            <i class="fas fa-cogs"></i> Create Operational
          </button>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Template Preview Modal -->
<div id="template-preview-modal" class="modal" class="hidden">
  <div class="modal-overlay" data-action="click->workflow-templates#closeTemplatePreview"></div>
  <div class="modal-content">
    <div class="modal-header">
      <h3 id="preview-title">Template Preview</h3>
      <button class="modal-close" data-action="click->workflow-templates#closeTemplatePreview">
        <i class="fas fa-times"></i>
      </button>
    </div>
    <div class="modal-body" id="preview-content">
      <!-- Preview content will be loaded here -->
    </div>
    <div class="modal-footer">
      <button class="btn-secondary" data-action="click->workflow-templates#closeTemplatePreview">Close</button>
      <button class="btn-primary" id="create-from-preview">
        <i class="fas fa-plus"></i> Create This Workflow
      </button>
    </div>
  </div>
</div>

