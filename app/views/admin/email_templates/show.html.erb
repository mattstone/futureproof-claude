  line-height: 1.5;
  max-height: 400px;
  overflow-y: auto;
  white-space: pre-wrap;
  word-wrap: break-word;
}

.change-history-list {
  border-top: 1px solid #e5e7eb;
}

.change-entry {
  padding: 16px 20px;
  border-bottom: 1px solid #f3f4f6;
}

.change-entry:last-child {
  border-bottom: none;
}

.change-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 8px;
}

.change-info {
  display: flex;
  align-items: center;
  gap: 12px;
}

.change-action {
  background: #f3f4f6;
  padding: 2px 8px;
  border-radius: 4px;
  font-size: 12px;
  color: #6b7280;
}

.change-time {
  color: #9ca3af;
  font-size: 12px;
}

.change-details {
  color: #6b7280;
  font-size: 14px;
  margin-bottom: 8px;
}

.change-diff {
  margin-top: 12px;
}

.change-diff summary {
  cursor: pointer;
  color: #0891b2;
  font-size: 14px;
  margin-bottom: 8px;
}

.diff-section {
  margin-bottom: 16px;
}

.diff-section h5 {
  margin: 0 0 8px 0;
  color: #374151;
  font-size: 14px;
}

.diff-content {
  background: #f8fafc;
  border: 1px solid #e5e7eb;
  border-radius: 4px;
  padding: 12px;
  font-family: monospace;
  font-size: 12px;
  max-height: 300px;
  overflow-y: auto;
}

.diff-line {
  padding: 2px 0;
  line-height: 1.4;
}

.diff-line.added {
  background: #dcfce7;
  color: #166534;
}

.diff-line.removed {
  background: #fef2f2;
  color: #dc2626;
}

.diff-line.context {
  color: #6b7280;
  font-style: italic;
}

.empty-state {
  text-align: center;
  color: #6b7280;
  padding: 40px;
}

@media (max-width: 768px) {
  .info-grid {
    grid-template-columns: 1fr;
  }
  
  .card-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
  }
  
  .change-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
  }
}
</style>