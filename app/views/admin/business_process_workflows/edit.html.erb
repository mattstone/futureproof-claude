<% content_for :title, "Edit #{@workflow.name}" %>

<%= javascript_include_tag 'admin_email_workflows' %>

<div class="mb-6">
  <div class="flex items-center justify-between">
    <div>
      <nav class="flex" aria-label="Breadcrumb">
        <ol class="flex items-center space-x-4">
          <li>
            <a href="<%= admin_business_process_workflows_path %>" class="text-gray-500 hover:text-gray-700">
              Business Process Workflows
            </a>
          </li>
          <li class="flex items-center">
            <svg class="flex-shrink-0 h-5 w-5 text-gray-400" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 111.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd"></path>
            </svg>
            <span class="ml-4 text-sm font-medium text-gray-900"><%= @workflow.name %></span>
          </li>
        </ol>
      </nav>
      <h1 class="text-2xl font-bold text-gray-900 mt-2">Edit <%= @workflow.name %></h1>
    </div>
    
    <div class="flex items-center space-x-3">
      <a href="<%= admin_business_process_workflow_path(@workflow) %>" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg">
        View Workflow
      </a>
    </div>
  </div>
</div>

<div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
  <!-- Sidebar -->
  <div class="lg:col-span-1">
    <!-- Workflow Info -->
    <div class="bg-white rounded-lg shadow border p-6 mb-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Workflow Info</h3>
      
      <%= form_with model: [:admin, @workflow], local: true, class: "space-y-4" do |f| %>
        <div>
          <%= f.label :name, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :name, class: "mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        
        <div>
          <%= f.label :description, class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_area :description, rows: 3, class: "mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500" %>
        </div>
        
        <div class="flex items-center">
          <%= f.check_box :active, class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-gray-300 rounded" %>
          <%= f.label :active, "Active", class: "ml-2 block text-sm text-gray-900" %>
        </div>
        
        <%= f.submit "Update Workflow", class: "w-full bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded-lg" %>
      <% end %>
    </div>
    
    <!-- Triggers -->
    <div class="bg-white rounded-lg shadow border p-6 mb-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Triggers</h3>
      
      <% if @workflow.triggers.any? %>
        <div class="space-y-2 mb-4">
          <% @workflow.triggers.each do |trigger_name, trigger_data| %>
            <div class="flex items-center justify-between p-2 border rounded <%= @selected_trigger == trigger_name ? 'bg-blue-50 border-blue-200' : 'border-gray-200' %>">
              <div class="flex-1">
                <a href="<%= edit_admin_business_process_workflow_path(@workflow, trigger: trigger_name) %>" 
                   class="text-sm font-medium <%= @selected_trigger == trigger_name ? 'text-blue-700' : 'text-gray-900' %>">
                  <%= trigger_name.humanize %>
                </a>
                <p class="text-xs text-gray-500"><%= trigger_data['nodes']&.count || 0 %> nodes</p>
              </div>
              <div class="flex items-center space-x-1">
                <% if @selected_trigger == trigger_name %>
                  <span class="inline-flex items-center px-2 py-1 rounded text-xs font-medium bg-blue-100 text-blue-700">
                    Editing
                  </span>
                <% end %>
                <%= button_to admin_business_process_workflow_path(@workflow, trigger_name: trigger_name), 
                              method: :delete, 
                              remote: true,
                              data: { 
                                confirm: "Remove trigger '#{trigger_name}'? This cannot be undone.",
                                turbo_method: :delete 
                              },
                              class: "text-red-600 hover:text-red-500 text-xs" do %>
                  Remove
                <% end %>
              </div>
            </div>
          <% end %>
        </div>
      <% end %>
      
      <!-- Add Trigger Form -->
      <%= form_with url: admin_business_process_workflow_path(@workflow), method: :post, local: true, class: "space-y-3" do |f| %>
        <div>
          <%= f.label :trigger_name, "New Trigger Name", class: "block text-sm font-medium text-gray-700" %>
          <%= f.text_field :trigger_name, placeholder: "e.g., user_registered", class: "mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm" %>
        </div>
        
        <div>
          <%= f.label :trigger_event, "Event Type", class: "block text-sm font-medium text-gray-700" %>
          <%= f.select :trigger_event, 
                       options_for_select([
                         ['User Registration', 'user_registered'],
                         ['Application Created', 'application_created'],
                         ['Application Status Changed', 'application_status_changed'],
                         ['Application Stuck', 'application_stuck_at_status'],
                         ['Custom Event', 'custom_event']
                       ]),
                       { prompt: 'Select event type' },
                       { class: "mt-1 block w-full border-gray-300 rounded-lg shadow-sm focus:ring-blue-500 focus:border-blue-500 text-sm" } %>
        </div>
        
        <%= f.submit "Add Trigger", class: "w-full bg-green-600 hover:bg-green-700 text-white font-medium py-2 px-4 rounded-lg text-sm" %>
      <% end %>
    </div>
    
    <!-- Node Palette -->
    <div class="bg-white rounded-lg shadow border p-6">
      <h3 class="text-lg font-semibold text-gray-900 mb-4">Add Nodes</h3>
      
      <div class="space-y-2" id="node-palette">
        <% @available_node_types.each do |type, label| %>
          <div class="draggable-node p-3 border border-gray-200 rounded-lg cursor-pointer hover:bg-gray-50 transition-colors"
               data-node-type="<%= type %>"
               data-label="<%= label %>">
            <div class="flex items-center">
              <div class="w-8 h-8 bg-gray-500 rounded flex items-center justify-center mr-3">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <% case type %>
                  <% when 'trigger' %>
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-8.293l-3-3a1 1 0 00-1.414 1.414L10.586 9H7a1 1 0 100 2h3.586l-1.293 1.293a1 1 0 101.414 1.414l3-3a1 1 0 000-1.414z" clip-rule="evenodd"></path>
                  <% when 'email' %>
                    <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                    <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                  <% when 'delay' %>
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"></path>
                  <% when 'condition' %>
                    <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h4a1 1 0 010 2H6.414l2.293 2.293a1 1 0 01.293.707V12a1 1 0 102 0V8a1 1 0 01.293-.707L13.586 5H12a1 1 0 010-2h4a1 1 0 011 1v4a1 1 0 01-2 0V6.414l-2.293 2.293A1 1 0 0112 9v3a3 3 0 11-6 0V9a1 1 0 01.293-.707L8.586 6H7a1 1 0 01-1-1V4z" clip-rule="evenodd"></path>
                  <% else %>
                    <path fill-rule="evenodd" d="M11.49 3.17c-.38-1.56-2.6-1.56-2.98 0a1.532 1.532 0 01-2.286.948c-1.372-.836-2.942.734-2.106 2.106.54.886.061 2.042-.947 2.287-1.561.379-1.561 2.6 0 2.978a1.532 1.532 0 01.947 2.287c-.836 1.372.734 2.942 2.106 2.106a1.532 1.532 0 012.287.947c.379 1.561 2.6 1.561 2.978 0a1.533 1.533 0 012.287-.947c1.372.836 2.942-.734 2.106-2.106a1.533 1.533 0 01.947-2.287c1.561-.379 1.561-2.6 0-2.978a1.532 1.532 0 01-.947-2.287c.836-1.372-.734-2.942-2.106-2.106a1.532 1.532 0 01-2.287-.947zM10 13a3 3 0 100-6 3 3 0 000 6z" clip-rule="evenodd"></path>
                  <% end %>
                </svg>
              </div>
              <div>
                <div class="text-sm font-medium text-gray-900"><%= label %></div>
                <div class="text-xs text-gray-500"><%= type %></div>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  
  <!-- Main Canvas -->
  <div class="lg:col-span-3">
    <div class="bg-white rounded-lg shadow border">
      <div class="p-4 border-b border-gray-200">
        <div class="flex items-center justify-between">
          <h3 class="text-lg font-semibold text-gray-900">
            <% if @selected_trigger %>
              Editing: <span class="text-blue-600"><%= @selected_trigger.humanize %></span>
            <% else %>
              Select a trigger to edit
            <% end %>
          </h3>
          
          <% if @selected_trigger %>
            <div class="flex items-center space-x-2">
              <button id="save-workflow" class="bg-green-600 hover:bg-green-700 text-white px-4 py-2 rounded-lg text-sm">
                Save Changes
              </button>
              <button id="reset-workflow" class="bg-gray-500 hover:bg-gray-600 text-white px-4 py-2 rounded-lg text-sm">
                Reset
              </button>
            </div>
          <% end %>
        </div>
      </div>
      
      <% if @selected_trigger %>
        <div id="workflow-canvas" 
             class="relative w-full"
             style="height: 600px; background: radial-gradient(circle, #e5e7eb 1px, transparent 1px); background-size: 20px 20px;"
             data-controller="workflow-builder"
             data-workflow-builder-trigger-name-value="<%= @selected_trigger %>"
             data-workflow-builder-trigger-data-value="<%= @trigger_data.to_json %>"
             data-workflow-builder-workflow-id-value="<%= @workflow.id %>"
             data-workflow-builder-update-url-value="<%= admin_business_process_workflow_path(@workflow) %>">
          
          <!-- SVG for connections -->
          <svg id="connections-svg" class="absolute inset-0 w-full h-full pointer-events-none" style="z-index: 1;">
            <!-- Connection lines will be drawn here -->
          </svg>
          
          <!-- Nodes will be added here by JavaScript -->
        </div>
      <% else %>
        <div class="flex items-center justify-center h-96 text-gray-500">
          <div class="text-center">
            <svg class="mx-auto h-12 w-12 text-gray-400" stroke="currentColor" fill="none" viewBox="0 0 48 48">
              <path d="M34 40h10v-4a6 6 0 00-10.712-3.714M34 40H14m20 0v-4a9.971 9.971 0 00-.712-3.714M14 40H4v-4a6 6 0 0110.713-3.714M14 40v-4c0-1.313.253-2.566.713-3.714m0 0A10.003 10.003 0 0124 26c4.21 0 7.813 2.602 9.288 6.286M30 14a6 6 0 11-12 0 6 6 0 0112 0zm12 6a4 4 0 11-8 0 4 4 0 018 0zm-28 0a4 4 0 11-8 0 4 4 0 018 0z" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"></path>
            </svg>
            <h3 class="mt-2 text-sm font-medium text-gray-900">No trigger selected</h3>
            <p class="mt-1 text-sm text-gray-500">Select a trigger from the sidebar to edit its workflow.</p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<script>
// Initialize workflow data for JavaScript
window.workflowData = {
  triggerName: '<%= @selected_trigger %>',
  triggerData: <%= @trigger_data.to_json.html_safe %>,
  workflowId: <%= @workflow.id %>,
  updateUrl: '<%= admin_business_process_workflow_path(@workflow) %>',
  emailTemplates: <%= @email_templates.to_json.html_safe %>
};
</script>