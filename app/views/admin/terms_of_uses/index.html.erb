<% content_for :page_title, "Terms of Use" %>

<div class="admin-actions-bar">
  <div></div>
  
  <div class="admin-actions">
    <%= link_to "Create New Version", new_admin_terms_of_use_path, class: "admin-btn admin-btn-primary" %>
  </div>
</div>

<div class="admin-table-container">
  <table class="admin-table">
    <thead>
      <tr>
        <th>Title</th>
        <th style="text-align: center;">Version</th>
        <th>Last Updated</th>
        <th>Status</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @terms_of_uses.each do |terms| %>
        <tr class="<%= 'active-row' if terms.is_active? %>">
          <td>
            <strong><%= terms.title %></strong>
          </td>
          <td style="text-align: center;">
            <span class="admin-badge admin-badge-info"><%= terms.version %></span>
          </td>
          <td>
            <%= terms.formatted_last_updated %>
          </td>
          <td>
            <% if terms.is_active? %>
              <span class="admin-badge admin-badge-success">Active</span>
            <% else %>
              <span class="admin-badge admin-badge-secondary">Draft</span>
            <% end %>
          </td>
          <td>
            <%= terms.created_at.strftime("%b %d, %Y") %>
          </td>
          <td class="admin-table-actions">
            <%= link_to "View", admin_terms_of_use_path(terms), class: "admin-btn admin-btn-sm admin-btn-secondary" %>
            <%= link_to "Edit", edit_admin_terms_of_use_path(terms), class: "admin-btn admin-btn-sm admin-btn-primary" %>
            <% unless terms.is_active? %>
              <%= link_to "Activate", 
                  activate_admin_terms_of_use_path(terms), 
                  method: :patch,
                  class: "admin-btn admin-btn-sm admin-btn-success",
                  data: { 
                    confirm: "Are you sure you want to activate this version? This will deactivate the current active version." 
                  } %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <% if @terms_of_uses.empty? %>
    <div class="admin-empty-state">
      <h3>No Terms of Use Found</h3>
      <p>Get started by creating your first Terms of Use.</p>
      <%= link_to "Create First Terms of Use", new_admin_terms_of_use_path, class: "admin-btn admin-btn-primary" %>
    </div>
  <% end %>
</div>

<%= paginate @terms_of_uses if respond_to?(:paginate) %>