<%= form_with model: [:admin, @terms_of_use], local: true, class: "admin-form structured-terms-form", 
      data: { controller: "structured-form", "structured-form-section-index-value": @terms_of_use.sections.length } do |form| %>
  <% if @terms_of_use.errors.any? %>
    <div class="alert alert-danger">
      <h4><%= pluralize(@terms_of_use.errors.count, "error") %> prohibited this Terms of Use from being saved:</h4>
      <ul>
        <% @terms_of_use.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="admin-form-group">
    <%= form.label :title, class: "admin-form-label" %>
    <%= form.text_field :title, class: "admin-form-input", placeholder: "e.g., Terms of Use" %>
  </div>

  <div class="admin-form-group">
    <label class="admin-form-label">Sections</label>
    <div class="admin-form-help">
      Create sections for your Terms of Use. Each section will be automatically formatted with proper styling.
    </div>
    
    <div id="sections-container" data-structured-form-target="sectionsContainer">
      <% @terms_of_use.sections.each_with_index do |section, index| %>
        <%= render 'section_form', section: section, index: index %>
      <% end %>
    </div>
    
    <button type="button" class="admin-btn admin-btn-secondary add-section-btn" data-structured-form-target="addSectionButton">
      + Add Section
    </button>
  </div>

  <div class="admin-form-actions">
    <%= form.submit "Save Terms of Use", class: "admin-btn admin-btn-primary" %>
    <%= link_to "Cancel", admin_terms_of_uses_path, class: "admin-btn admin-btn-secondary" %>
  </div>
<% end %>

<!-- Section Template (hidden) -->
<template id="section-template">
  <%= render 'section_form', section: {}, index: '__INDEX__' %>
</template>


