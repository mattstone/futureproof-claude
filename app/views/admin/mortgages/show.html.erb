<% content_for :page_title, "Mortgage Details" %>

<div class="admin-actions-bar">
  <div>
    <%= link_to "â† Back to Mortgages", admin_mortgages_path, class: "admin-btn admin-btn-secondary" %>
  </div>
  
  <div class="admin-actions">
    <%= link_to "Edit Mortgage", edit_admin_mortgage_path(@mortgage), class: "admin-btn admin-btn-primary" %>
    <%= link_to "Delete Mortgage", admin_mortgage_path(@mortgage), method: :delete, 
        data: { confirm: "Are you sure you want to delete this mortgage?" }, 
        class: "admin-btn admin-btn-danger" %>
  </div>
</div>

<div class="admin-form">
  <h2><%= @mortgage.name %></h2>
  
  <div class="mortgage-details">
    <div class="detail-row">
      <strong>Name:</strong>
      <%= @mortgage.name %>
    </div>
    
    <div class="detail-row">
      <strong>Type:</strong>
      <span class="admin-badge <%= @mortgage.mortgage_type_interest_only? ? 'admin-badge-admin' : 'admin-badge-user' %>">
        <%= @mortgage.mortgage_type_display %>
      </span>
    </div>
    
    <div class="detail-row">
      <strong>LVR:</strong>
      <%= @mortgage.formatted_lvr %>
    </div>
    
    <div class="detail-row">
      <strong>Created:</strong>
      <%= @mortgage.created_at.strftime("%B %d, %Y at %I:%M %p") %>
    </div>
    
    <div class="detail-row">
      <strong>Last Updated:</strong>
      <%= @mortgage.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
    </div>
  </div>
</div>

<!-- Funder Pools Section -->
<div class="admin-form funder-pools-section">
  <h3>Funder Pools</h3>
  <p class="section-subtitle">Manage funder pool associations for this mortgage</p>
  
  <% if @mortgage.mortgage_funder_pools.any? %>
    <div class="funder-pools-list">
      <% @mortgage.mortgage_funder_pools.includes(funder_pool: :funder).each do |association| %>
        <div class="pool-card <%= 'inactive-card' unless association.active? %>">
          <div class="pool-header">
            <div class="pool-info">
              <h4><%= association.funder_pool.name %></h4>
              <p class="pool-funder">
                <%= link_to association.funder_pool.funder.name, admin_funder_path(association.funder_pool.funder), class: "admin-link" %>
              </p>
            </div>
            <div class="pool-status">
              <span class="status-badge <%= association.status_badge_class %>">
                <%= association.status_display %>
              </span>
            </div>
          </div>
          
          <div class="pool-amounts">
            <div class="amount-item">
              <span class="amount-label">Total</span>
              <span class="amount-value total"><%= association.funder_pool.formatted_amount %></span>
            </div>
            <div class="amount-item">
              <span class="amount-label">Allocated</span>
              <span class="amount-value allocated"><%= association.funder_pool.formatted_allocated %></span>
            </div>
            <div class="amount-item">
              <span class="amount-label">Available</span>
              <span class="amount-value available"><%= association.funder_pool.formatted_available %></span>
            </div>
          </div>
          
          <div class="pool-actions">
            <%= button_to toggle_active_admin_mortgage_funder_pool_path(@mortgage, association), 
                method: :patch,
                data: { confirm: association.active? ? "Deactivate this pool?" : "Activate this pool?" },
                class: "admin-btn admin-btn-sm #{association.active? ? 'admin-btn-warning' : 'admin-btn-success'}" do %>
              <%= association.active? ? "Deactivate" : "Activate" %>
            <% end %>
            <%= button_to "Remove", admin_mortgage_funder_pool_path(@mortgage, association), 
                method: :delete,
                data: { confirm: "Remove this pool?" },
                class: "admin-btn admin-btn-sm admin-btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
    
    <div class="section-actions">
      <%= link_to "Add Funder Pool", new_admin_mortgage_funder_pool_path(@mortgage), class: "admin-btn admin-btn-primary" %>
    </div>
  <% else %>
    <div class="empty-state">
      <h4>No funder pools assigned</h4>
      <p>This mortgage doesn't have any funder pools yet. Add at least one to activate this mortgage.</p>
      <div class="empty-state-actions">
        <%= link_to "Add First Funder Pool", new_admin_mortgage_funder_pool_path(@mortgage), class: "admin-btn admin-btn-primary" %>
      </div>
    </div>
  <% end %>
</div>

<!-- Change History Section -->
<div class="admin-form change-history-section">
  <h3>Change History</h3>
  <p class="section-subtitle">Track all modifications made to this mortgage</p>
  
  <% if @audit_history.any? %>
    <div class="change-history-list">
      <% @audit_history.each do |version| %>
        <div class="change-entry">
          <div class="change-header">
            <div class="change-info">
              <strong><%= version.user.display_name %></strong>
              <span class="change-action"><%= version.action_description %></span>
              <time class="change-time"><%= version.formatted_created_at %></time>
            </div>
          </div>
          
          <% if version.change_details.present? %>
            <div class="change-details">
              <%= version.change_details %>
            </div>
          <% end %>
          
          <% if version.has_field_changes? %>
            <div class="change-content">
              <details class="change-diff">
                <summary>View Changes</summary>
                
                <div class="field-changes">
                  <% version.detailed_changes.each do |change| %>
                    <div class="field-change">
                      <strong><%= change[:field] %>:</strong>
                      <div class="change-comparison">
                        <div class="change-from">- <%= change[:from] %></div>
                        <div class="change-to">+ <%= change[:to] %></div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </details>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <p>No change history available yet.</p>
    </div>
  <% end %>
</div>

