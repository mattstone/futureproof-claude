<% content_for :page_title, "Mortgage Details" %>

<div class="admin-actions-bar">
  <div>
    <%= link_to "← Back to Mortgages", admin_mortgages_path, class: "admin-btn admin-btn-secondary" %>
  </div>
  
  <div class="admin-actions">
    <%= link_to "Edit Mortgage", edit_admin_mortgage_path(@mortgage), class: "admin-btn admin-btn-primary" %>
    <%= link_to "Delete Mortgage", admin_mortgage_path(@mortgage), method: :delete, 
        data: { confirm: "Are you sure you want to delete this mortgage?" }, 
        class: "admin-btn admin-btn-danger" %>
  </div>
</div>

<div class="admin-form">
  <h2><%= @mortgage.name %></h2>
  
  <div class="mortgage-details">
    <div class="detail-row">
      <strong>Name:</strong>
      <%= @mortgage.name %>
    </div>
    
    <div class="detail-row">
      <strong>Type:</strong>
      <span class="admin-badge <%= @mortgage.mortgage_type_interest_only? ? 'admin-badge-admin' : 'admin-badge-user' %>">
        <%= @mortgage.mortgage_type_display %>
      </span>
    </div>
    
    <div class="detail-row">
      <strong>LVR:</strong>
      <%= @mortgage.formatted_lvr %>
    </div>
    
    <div class="detail-row">
      <strong>Created:</strong>
      <%= @mortgage.created_at.strftime("%B %d, %Y at %I:%M %p") %>
    </div>
    
    <div class="detail-row">
      <strong>Last Updated:</strong>
      <%= @mortgage.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
    </div>
  </div>
</div>

<!-- Change History Section -->
<div class="admin-form change-history-section">
  <h3>Change History</h3>
  <p class="section-subtitle">Track all modifications made to this mortgage</p>
  
  <% if @audit_history.any? %>
    <div class="change-history-list">
      <% @audit_history.each do |version| %>
        <div class="change-entry">
          <div class="change-header">
            <div class="change-info">
              <strong><%= version.user.display_name %></strong>
              <span class="change-action"><%= version.action_description %></span>
              <time class="change-time"><%= version.formatted_created_at %></time>
            </div>
          </div>
          
          <% if version.change_details.present? %>
            <div class="change-details">
              <%= version.change_details %>
            </div>
          <% end %>
          
          <% if version.has_field_changes? %>
            <div class="change-content">
              <details class="change-diff">
                <summary>View Changes</summary>
                
                <div class="field-changes">
                  <% version.detailed_changes.each do |change| %>
                    <div class="field-change">
                      <strong><%= change[:field] %>:</strong>
                      <div class="change-comparison">
                        <div class="change-from">- <%= change[:from] %></div>
                        <div class="change-to">+ <%= change[:to] %></div>
                      </div>
                    </div>
                  <% end %>
                </div>
              </details>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="empty-state">
      <p>No change history available yet.</p>
    </div>
  <% end %>
</div>

