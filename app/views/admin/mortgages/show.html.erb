<% content_for :page_title, "Mortgage Details" %>

<div class="admin-actions-bar">
  <div>
    <%= link_to "‚Üê Back to Mortgages", admin_mortgages_path, class: "admin-btn admin-btn-secondary" %>
  </div>
  
  <div class="admin-actions">
    <%= link_to "Edit Mortgage", edit_admin_mortgage_path(@mortgage), class: "admin-btn admin-btn-primary" %>
    <%= link_to "Delete Mortgage", admin_mortgage_path(@mortgage), method: :delete, 
        data: { confirm: "Are you sure you want to delete this mortgage?" }, 
        class: "admin-btn admin-btn-danger" %>
  </div>
</div>

<div class="admin-form">
  <h2><%= @mortgage.name %></h2>
  
  <div class="mortgage-details">
    <div class="detail-row">
      <strong>Name:</strong>
      <%= @mortgage.name %>
    </div>
    
    <div class="detail-row">
      <strong>Type:</strong>
      <span class="admin-badge <%= @mortgage.mortgage_type_interest_only? ? 'admin-badge-admin' : 'admin-badge-user' %>">
        <%= @mortgage.mortgage_type_display %>
      </span>
    </div>
    
    <div class="detail-row">
      <strong>LVR:</strong>
      <%= @mortgage.formatted_lvr %>
    </div>
    
    <div class="detail-row">
      <strong>Created:</strong>
      <%= @mortgage.created_at.strftime("%B %d, %Y at %I:%M %p") %>
    </div>
    
    <div class="detail-row">
      <strong>Lenders:</strong>
      <span><%= @mortgage.active_lenders.count %> active lender<%= @mortgage.active_lenders.count == 1 ? '' : 's' %></span>
    </div>
    
    <div class="detail-row">
      <strong>Last Updated:</strong>
      <%= @mortgage.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
    </div>
  </div>
</div>

<!-- Lender Relationships Section -->
<div class="lender-relationships-section">
  <div class="section-header">
    <h3>Lender Relationships</h3>
    <p class="section-subtitle">Manage which lenders are associated with this mortgage</p>
  </div>
  
  <div class="lender-two-column-layout" data-controller="mortgage-lender-selector" data-mortgage-lender-selector-mortgage-id-value="<%= @mortgage.id %>">
    <!-- Left Column: Existing Lender Relationships -->
    <div class="lender-column">
      <div class="admin-card">
        <h4>Existing Relationships</h4>
        <div id="existing-lenders" data-mortgage-lender-selector-target="existingLenders">
          <div id="lender-list-content">
            <% if @mortgage.mortgage_lenders.any? %>
              <% @mortgage.mortgage_lenders.includes(:lender).each do |relationship| %>
                <div class="lender-relationship-card">
                  <div class="lender-info">
                    <h5><%= relationship.lender.name %></h5>
                    <div class="lender-meta">
                      <span class="lender-type-badge <%= relationship.lender.lender_type_futureproof? ? 'lender-futureproof' : 'lender-external' %>">
                        <%= relationship.lender.lender_type.humanize %>
                      </span>
                      <span class="status-badge <%= relationship.active? ? 'status-active' : 'status-inactive' %>">
                        <%= relationship.active? ? 'Active' : 'Inactive' %>
                      </span>
                    </div>
                    <p class="lender-email"><%= relationship.lender.contact_email %></p>
                    <p class="relationship-created">Added <%= relationship.created_at.strftime("%B %d, %Y") %></p>
                  </div>
                  <div class="lender-actions">
                    <%= button_to "Toggle", admin_mortgage_lender_path(@mortgage, relationship), 
                        method: :patch, 
                        remote: true, 
                        params: { _method: :patch, authenticity_token: form_authenticity_token },
                        data: { 
                          confirm: "Are you sure you want to #{relationship.active? ? 'deactivate' : 'activate'} this lender relationship?"
                        },
                        class: "admin-btn admin-btn-sm admin-btn-secondary" %>
                    <%= button_to "Remove", admin_mortgage_lender_path(@mortgage, relationship), 
                        method: :delete, 
                        remote: true,
                        params: { authenticity_token: form_authenticity_token },
                        data: { 
                          confirm: "Are you sure you want to remove this lender relationship? This action cannot be undone."
                        },
                        class: "admin-btn admin-btn-sm admin-btn-danger" %>
                  </div>
                </div>
              <% end %>
            <% else %>
              <div class="empty-relationships">
                <div class="empty-icon">üè¶</div>
                <h5>No Lender Relationships</h5>
                <p>This mortgage is not yet associated with any lenders.</p>
                <p class="empty-hint">Use the "Add New Relationship" section to get started.</p>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Right Column: Add New Relationship -->
    <div class="lender-column">
      <div class="admin-card">
        <h4>Add New Relationship</h4>
        <p class="add-description">Associate additional lenders with this mortgage.</p>
        
        <button class="admin-btn admin-btn-primary full-width" data-action="click->mortgage-lender-selector#showSelection">
          <span class="btn-icon">+</span>
          Add Lender Relationship
        </button>
        
        <!-- Lender Selection Interface (initially hidden) -->
        <div id="lender-selection" data-mortgage-lender-selector-target="selectionInterface" style="display: none;">
          <div class="selection-header">
            <h5>Available Lenders</h5>
            <button type="button" class="close-selection" data-action="click->mortgage-lender-selector#hideSelection">√ó</button>
          </div>
          
          <div class="selection-loading" data-mortgage-lender-selector-target="loadingState">
            <div class="loading-spinner"></div>
            <p>Loading available lenders...</p>
          </div>
          
          <div class="lender-options" data-mortgage-lender-selector-target="lenderOptions">
            <!-- Lender options will be populated here -->
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Change History Section -->
<div style="margin-top: 32px;">
  <%= render 'shared/change_history', versions: @all_versions %>
</div>

