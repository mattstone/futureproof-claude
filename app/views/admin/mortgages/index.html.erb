<% content_for :page_title, "Mortgages" %>

<div class="admin-actions-bar">
  <div class="admin-filters">
    <%= form_with(url: admin_mortgages_path, method: :get, local: true, class: "filters-form") do |form| %>
      <div class="filter-group">
        <%= form.text_field :search, placeholder: "Search mortgages...", value: params[:search], class: "filter-input" %>
      </div>
      <div class="filter-group">
        <%= form.select :status, 
            options_for_select([
              ['All Statuses', ''],
              ['Draft', 'draft'],
              ['Active', 'active'], 
              ['Inactive', 'inactive']
            ], params[:status]),
            {}, 
            { class: "filter-select", onchange: "this.form.submit();" } %>
      </div>
      <% if params[:search].present? || params[:status].present? %>
        <div class="filter-group">
          <%= link_to "Clear Filters", admin_mortgages_path, class: "admin-btn admin-btn-sm admin-btn-secondary" %>
        </div>
      <% end %>
    <% end %>
  </div>
  
  <div class="admin-actions">
    <%= link_to "Add New Mortgage", new_admin_mortgage_path, class: "admin-btn admin-btn-primary" %>
  </div>
</div>

<div class="admin-table">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>LVR</th>
        <th>Lenders</th>
        <th>Status</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @mortgages.each do |mortgage| %>
        <tr>
          <td><%= mortgage.name %></td>
          <td>
            <span class="admin-badge <%= mortgage.mortgage_type_interest_only? ? 'admin-badge-admin' : 'admin-badge-user' %>">
              <%= mortgage.mortgage_type.humanize %>
            </span>
          </td>
          <td><strong><%= mortgage.formatted_lvr %></strong></td>
          <td>
            <% if mortgage.active_lenders.any? %>
              <span class="lender-count">
                <%= mortgage.active_lenders.count %> lender<%= mortgage.active_lenders.count == 1 ? '' : 's' %>
              </span>
            <% else %>
              <span class="no-lender">No lenders</span>
            <% end %>
          </td>
          <td>
            <span class="status-badge status-<%= mortgage.status %>">
              <%= mortgage.status.humanize %>
            </span>
          </td>
          <td>
            <%= link_to "View", admin_mortgage_path(mortgage), class: "admin-btn admin-btn-sm admin-btn-secondary" %>
            <%= link_to "Edit", edit_admin_mortgage_path(mortgage), class: "admin-btn admin-btn-sm admin-btn-primary" %>
            <%= link_to "Delete", admin_mortgage_path(mortgage), method: :delete, 
                data: { confirm: "Are you sure you want to delete this mortgage?" }, 
                class: "admin-btn admin-btn-sm admin-btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <% if @mortgages.empty? %>
    <div style="padding: 40px; text-align: center; color: #6b7280;">
      <% if params[:search].present? %>
        No mortgages found matching "<%= params[:search] %>"
      <% else %>
        No mortgages found. <%= link_to "Create the first mortgage", new_admin_mortgage_path, class: "admin-link" %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="admin-pagination">
  <%= paginate @mortgages %>
</div>

<style>
/* Filter styling */
.admin-filters {
  display: flex;
  align-items: center;
  gap: 16px;
  flex: 1;
}

.filters-form {
  display: flex;
  align-items: center;
  gap: 16px;
  width: 100%;
}

.filter-group {
  display: flex;
  align-items: center;
}

.filter-input {
  padding: 8px 12px;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-size: 14px;
  width: 240px;
}

.filter-input:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.filter-select {
  padding: 8px 12px;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-size: 14px;
  background: white;
  min-width: 140px;
  cursor: pointer;
}

.filter-select:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

/* Status badge styling */
.status-badge {
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  display: inline-block;
}

.status-draft {
  background-color: #fef3c7;
  color: #92400e;
}

.status-active {
  background-color: #dcfce7;
  color: #166534;
}

.status-inactive {
  background-color: #fee2e2;
  color: #dc2626;
}

/* Lender styling */
.lender-count {
  font-weight: 600;
  color: #374151;
  font-size: 14px;
}

.no-lender {
  color: #dc2626;
  font-style: italic;
  font-size: 13px;
}
</style>