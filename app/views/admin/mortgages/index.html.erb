<% content_for :page_title, "Mortgages" %>

<div class="admin-actions-bar">
  <div class="admin-search">
    <%= form_with(url: admin_mortgages_path, method: :get, local: true, class: "search-form") do |form| %>
      <%= form.text_field :search, placeholder: "Search mortgages...", value: params[:search] %>
    <% end %>
  </div>
  
  <div class="admin-actions">
    <%= link_to "Add New Mortgage", new_admin_mortgage_path, class: "admin-btn admin-btn-primary" %>
  </div>
</div>

<div class="admin-table">
  <table>
    <thead>
      <tr>
        <th>Name</th>
        <th>Type</th>
        <th>LVR</th>
        <th>Lender</th>
        <th>Created</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @mortgages.each do |mortgage| %>
        <tr>
          <td><%= mortgage.name %></td>
          <td>
            <span class="admin-badge <%= mortgage.mortgage_type_interest_only? ? 'admin-badge-admin' : 'admin-badge-user' %>">
              <%= mortgage.mortgage_type.humanize %>
            </span>
          </td>
          <td><strong><%= mortgage.formatted_lvr %></strong></td>
          <td>
            <% if mortgage.lender %>
              <%= link_to mortgage.lender.name, admin_lender_path(mortgage.lender), class: "admin-link" %>
              <span class="lender-type-badge <%= mortgage.lender.lender_type_futureproof? ? 'lender-futureproof' : 'lender-external' %>">
                <%= mortgage.lender.lender_type.humanize %>
              </span>
            <% else %>
              <span class="no-lender">No lender assigned</span>
            <% end %>
          </td>
          <td><%= mortgage.created_at.strftime("%B %d, %Y") %></td>
          <td>
            <%= link_to "View", admin_mortgage_path(mortgage), class: "admin-btn admin-btn-sm admin-btn-secondary" %>
            <%= link_to "Edit", edit_admin_mortgage_path(mortgage), class: "admin-btn admin-btn-sm admin-btn-primary" %>
            <%= link_to "Delete", admin_mortgage_path(mortgage), method: :delete, 
                data: { confirm: "Are you sure you want to delete this mortgage?" }, 
                class: "admin-btn admin-btn-sm admin-btn-danger" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  
  <% if @mortgages.empty? %>
    <div style="padding: 40px; text-align: center; color: #6b7280;">
      <% if params[:search].present? %>
        No mortgages found matching "<%= params[:search] %>"
      <% else %>
        No mortgages found. <%= link_to "Create the first mortgage", new_admin_mortgage_path, class: "admin-link" %>
      <% end %>
    </div>
  <% end %>
</div>

<div class="admin-pagination">
  <%= paginate @mortgages %>
</div>

<style>
/* Lender styling */
.lender-type-badge {
  padding: 2px 6px;
  border-radius: 10px;
  font-size: 10px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  margin-left: 6px;
  display: inline-block;
}

.lender-futureproof {
  background-color: #dbeafe;
  color: #1e40af;
}

.lender-external {
  background-color: #f3e8ff;
  color: #7c3aed;
}

.no-lender {
  color: #dc2626;
  font-style: italic;
  font-size: 13px;
}

.admin-link {
  color: #3b82f6;
  text-decoration: none;
  font-weight: 500;
}

.admin-link:hover {
  text-decoration: underline;
}

/* Ensure table columns are properly sized */
.admin-table th:nth-child(4) {
  width: 180px;
}

.admin-table td:nth-child(4) {
  max-width: 180px;
}
</style>