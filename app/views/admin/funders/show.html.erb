<% content_for :page_title, @funder.display_name %>

<div class="admin-actions-bar">
  <div>
    <h1><%= @funder.name %></h1>
    <p class="page-subtitle"><%= @funder.country %> ‚Ä¢ <%= @funder.currency_symbol %><%= @funder.currency %></p>
  </div>
  
  <div class="admin-actions">
    <%= link_to "Edit Funder", edit_admin_funder_path(@funder), class: "admin-btn admin-btn-primary" %>
    <%= link_to "Delete", admin_funder_path(@funder), method: :delete, 
        data: { confirm: "Are you sure you want to delete this funder?" }, 
        class: "admin-btn admin-btn-danger" %>
    <%= link_to "Back to Funders", admin_funders_path, class: "admin-btn admin-btn-secondary" %>
  </div>
</div>

<!-- Funder Details -->
<div class="admin-card">
  <h3>Funder Information</h3>
  
  <div class="funder-details">
    <!-- Column 1: Basic Information -->
    <div class="funder-basic">
      <h4>Basic Information</h4>
      <div class="funder-name"><%= @funder.name %></div>
      <div class="funder-location">
        <span class="country-flag">üåç</span>
        <%= @funder.country %>
      </div>
      <div class="funder-currency">
        <span class="currency-badge currency-<%= @funder.currency.downcase %>">
          <%= @funder.currency_symbol %> <%= @funder.currency %>
        </span>
      </div>
    </div>
    
    <!-- Column 2: Pool Summary -->
    <div class="funder-summary">
      <h4>Pool Summary</h4>
      <div class="summary-stats">
        <div class="stat-item">
          <div class="stat-value pools-count"><%= @funder.pools_count %></div>
          <div class="stat-label">Pool<%= 's' if @funder.pools_count != 1 %></div>
        </div>
        <div class="stat-item">
          <div class="stat-value capital-amount">
            <% if @funder.total_capital > 0 %>
              <%= @funder.formatted_total_capital %>
            <% else %>
              $0
            <% end %>
          </div>
          <div class="stat-label">Total Capital</div>
        </div>
        <div class="stat-item">
          <div class="stat-value allocated-amount">
            <% if @funder.total_allocated > 0 %>
              <%= @funder.formatted_total_allocated %>
            <% else %>
              $0
            <% end %>
          </div>
          <div class="stat-label">Allocated</div>
        </div>
      </div>
      
      <% if @funder.total_capital > 0 %>
        <div class="allocation-bar">
          <div class="allocation-progress" style="width: <%= @funder.capital_allocation_percentage %>%"></div>
        </div>
        <div class="allocation-text">
          <span class="allocation-percentage"><%= @funder.capital_allocation_percentage %>% allocated</span>
          <span class="available-amount">
            <%= @funder.formatted_total_available %> available
          </span>
        </div>
      <% end %>
    </div>
    
    <!-- Column 3: Meta Information -->
    <div class="funder-meta">
      <h4>Timestamps</h4>
      <div class="meta-row">
        <span class="meta-label">Created:</span>
        <span class="meta-value"><%= @funder.created_at.strftime("%B %d, %Y") %></span>
      </div>
      <div class="meta-row">
        <span class="meta-label">Last Updated:</span>
        <span class="meta-value"><%= @funder.updated_at.strftime("%B %d, %Y") %></span>
      </div>
    </div>
  </div>
</div>

<!-- Funder Pools -->
<div class="admin-card">
  <div class="card-header">
    <h3>Funder Pools</h3>
    <div class="card-actions">
      <%= link_to "New Pool", new_admin_funder_funder_pool_path(@funder), class: "admin-btn admin-btn-primary admin-btn-sm" %>
    </div>
  </div>
  
  <% if @funder.funder_pools.any? %>
    <div class="admin-table">
      <table>
        <thead>
          <tr>
            <th>Pool Name</th>
            <th>Total Amount</th>
            <th>Allocated</th>
            <th>Available</th>
            <th>Allocation %</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @funder.funder_pools.recent.each do |pool| %>
            <tr>
              <td>
                <strong><%= pool.name %></strong>
              </td>
              <td class="amount-cell">
                <span class="amount-total"><%= pool.formatted_amount %></span>
              </td>
              <td class="amount-cell">
                <span class="amount-allocated"><%= pool.formatted_allocated %></span>
              </td>
              <td class="amount-cell">
                <span class="amount-available"><%= pool.formatted_available %></span>
              </td>
              <td class="percentage-cell">
                <div class="mini-allocation-bar">
                  <div class="mini-allocation-progress" style="width: <%= pool.allocation_percentage %>%"></div>
                  <span class="mini-allocation-text"><%= pool.allocation_percentage %>%</span>
                </div>
              </td>
              <td class="actions-cell">
                <div class="admin-actions">
                  <%= link_to "View", admin_funder_funder_pool_path(@funder, pool), class: "admin-btn admin-btn-sm admin-btn-secondary", data: { turbo_frame: "_top" } %>
                  <%= link_to "Edit", edit_admin_funder_funder_pool_path(@funder, pool), class: "admin-btn admin-btn-sm admin-btn-primary", data: { turbo_frame: "_top" } %>
                  <%= link_to "Delete", admin_funder_funder_pool_path(@funder, pool), method: :delete, 
                      data: { confirm: "Are you sure you want to delete this pool?", turbo_frame: "_top" }, 
                      class: "admin-btn admin-btn-sm admin-btn-danger" %>
                </div>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    <div class="empty-state">
      <div class="empty-state-content">
        <h4>No pools created yet</h4>
        <p>Create funding pools to organize and track allocated amounts for this funder.</p>
        <div class="empty-state-actions">
          <%= link_to "Create First Pool", new_admin_funder_funder_pool_path(@funder), class: "admin-btn admin-btn-primary" %>
        </div>
      </div>
    </div>
  <% end %>
</div>

<style>
/* Funder Details 3-Column Layout */
.funder-details {
  display: grid;
  grid-template-columns: 1fr 1fr 1fr;
  gap: 32px;
  padding: 8px 0;
}

.funder-basic,
.funder-summary,
.funder-meta {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.funder-basic h4,
.funder-summary h4,
.funder-meta h4 {
  margin: 0;
  font-size: 14px;
  font-weight: 600;
  color: #475569;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  padding-bottom: 8px;
  border-bottom: 1px solid #e2e8f0;
}

/* Column 1: Basic Information */
.funder-name {
  font-size: 20px;
  font-weight: 700;
  color: #1f2937;
  line-height: 1.2;
  margin-bottom: 8px;
}

.funder-location {
  display: flex;
  align-items: center;
  gap: 8px;
  font-size: 15px;
  color: #4b5563;
  margin-bottom: 8px;
}

.country-flag {
  font-size: 16px;
}

.funder-currency {
  margin-top: 4px;
}

/* Column 2: Summary adjustments */
.funder-summary .summary-stats {
  margin-bottom: 12px;
}

/* Column 3: Meta */
.funder-meta {
  min-width: auto;
}

.meta-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6px 0;
}

.meta-label {
  font-size: 13px;
  color: #6b7280;
  font-weight: 500;
}

.meta-value {
  font-size: 14px;
  color: #374151;
  font-weight: 600;
}


.summary-stats {
  display: flex;
  justify-content: space-between;
  gap: 16px;
  margin-bottom: 16px;
}

.stat-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
  flex: 1;
}

.stat-value {
  font-size: 18px;
  font-weight: 700;
  line-height: 1.2;
  margin-bottom: 4px;
}

.stat-label {
  font-size: 11px;
  color: #64748b;
  text-transform: uppercase;
  letter-spacing: 0.5px;
  font-weight: 500;
}

.pools-count {
  color: #0891b2;
}

.capital-amount {
  color: #059669;
}

.allocated-amount {
  color: #dc2626;
}

/* Allocation Bar */
.allocation-bar {
  position: relative;
  background: #e2e8f0;
  border-radius: 6px;
  height: 8px;
  overflow: hidden;
  margin-bottom: 8px;
}

.allocation-progress {
  height: 100%;
  background: linear-gradient(90deg, #10b981 0%, #dc2626 100%);
  border-radius: 6px;
  transition: width 0.3s ease;
}

.allocation-text {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 12px;
}

.allocation-percentage {
  color: #dc2626;
  font-weight: 600;
}

.available-amount {
  color: #059669;
  font-weight: 600;
}

.meta-section {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.currency-badge {
  padding: 4px 8px;
  border-radius: 4px;
  font-size: 12px;
  font-weight: 500;
  text-align: center;
  display: inline-block;
}

.currency-aud {
  background-color: #dcfce7;
  color: #166534;
}

.currency-usd {
  background-color: #dbeafe;
  color: #1e40af;
}

.currency-gbp {
  background-color: #fef3c7;
  color: #92400e;
}

.page-subtitle {
  color: #6b7280;
  font-size: 14px;
  margin: 0;
}

/* Card header */
.card-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
  padding-bottom: 12px;
  border-bottom: 1px solid #e5e7eb;
}

.card-header h3 {
  margin: 0;
}

.card-actions {
  display: flex;
  gap: 8px;
}

/* Amount styling */
.amount-cell {
  text-align: right;
  font-weight: 600;
}

.amount-total {
  color: #059669;
}

.amount-allocated {
  color: #dc2626;
}

.amount-available {
  color: #0891b2;
}

/* Mini allocation bars */
.percentage-cell {
  width: 120px;
}

.mini-allocation-bar {
  position: relative;
  background: #e5e7eb;
  border-radius: 4px;
  height: 16px;
  overflow: hidden;
  min-width: 80px;
}

.mini-allocation-progress {
  height: 100%;
  background: linear-gradient(90deg, #10b981 0%, #dc2626 100%);
  border-radius: 4px;
  transition: width 0.3s ease;
}

.mini-allocation-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 10px;
  font-weight: 600;
  color: white;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
}

.actions-cell {
  white-space: nowrap;
}

.admin-actions {
  display: flex;
  gap: 4px;
  flex-wrap: wrap;
}

/* Status badges */
.status-cell {
  text-align: center;
}

.status-badge {
  padding: 4px 8px;
  border-radius: 12px;
  font-size: 11px;
  font-weight: 600;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.status-active {
  background-color: #dcfce7;
  color: #166534;
}

.status-inactive {
  background-color: #fee2e2;
  color: #991b1b;
}

/* Inactive row styling */
.inactive-row {
  opacity: 0.6;
  background-color: #f9fafb;
}

.inactive-row td {
  color: #6b7280;
}

/* Empty state for pools */
.empty-state {
  text-align: center;
  padding: 40px 20px;
  background: #f9fafb;
  border-radius: 8px;
  border: 2px dashed #d1d5db;
}

.empty-state-content h4 {
  margin: 0 0 8px 0;
  color: #374151;
  font-size: 16px;
}

.empty-state-content p {
  margin: 0 0 20px 0;
  color: #6b7280;
  font-size: 14px;
}

.empty-state-actions {
  display: flex;
  justify-content: center;
}

/* Mobile responsive for funder details */
@media (max-width: 768px) {
  .funder-details {
    grid-template-columns: 1fr;
    gap: 24px;
  }
  
  .funder-name {
    font-size: 18px;
  }
  
  .funder-location {
    font-size: 14px;
  }
  
  .summary-stats {
    flex-direction: column;
    gap: 12px;
    align-items: stretch;
  }
  
  .stat-item {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    text-align: left;
  }
  
  .stat-value {
    margin-bottom: 0;
  }
  
  .meta-row {
    padding: 4px 0;
  }
}

@media (max-width: 1024px) and (min-width: 769px) {
  .funder-details {
    grid-template-columns: 1fr 1fr;
    gap: 24px;
  }
  
  .funder-meta {
    grid-column: 1 / -1;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 16px;
    align-items: start;
  }
  
  .funder-meta h4 {
    grid-column: 1 / -1;
  }
}
</style>
