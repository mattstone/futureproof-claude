<% content_for :page_title, "Add Funder Pool to #{@mortgage.name}" %>

<div class="admin-actions-bar">
  <div>
    <h1>Add Funder Pool</h1>
    <p class="page-subtitle">Associate a funder pool with <%= @mortgage.name %></p>
  </div>
  
  <div class="admin-actions">
    <%= link_to "Back to Mortgage", admin_mortgage_path(@mortgage), class: "admin-btn admin-btn-secondary" %>
  </div>
</div>

<!-- Add Funder Pool Form -->
<div class="admin-card">
  <h3>Select Funder Pool</h3>
  
  <%= form_with model: [:admin, @mortgage, @mortgage_funder_pool], local: true, class: "admin-form" do |form| %>
    <% if @mortgage_funder_pool.errors.any? %>
      <div class="form-errors">
        <h4><%= pluralize(@mortgage_funder_pool.errors.count, "error") %> prohibited this association from being saved:</h4>
        <ul>
          <% @mortgage_funder_pool.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="form-grid">
      <div class="form-group">
        <%= form.label :funder_pool_id, "Funder Pool", class: "form-label" %>
        <%= form.collection_select :funder_pool_id, @available_funder_pools, :id, :display_name, 
            { prompt: "Select a funder pool..." }, 
            { class: "form-select" } %>
        <small class="form-help">Choose from available funder pools not already associated with this mortgage</small>
        <% if @mortgage_funder_pool.errors[:funder_pool].any? %>
          <div class="field-error"><%= @mortgage_funder_pool.errors[:funder_pool].first %></div>
        <% end %>
      </div>
      
      <div class="form-group">
        <div class="checkbox-group">
          <%= form.check_box :active, { checked: true }, class: "form-checkbox" %>
          <%= form.label :active, "Active for this mortgage", class: "checkbox-label" %>
        </div>
        <small class="form-help">Only active associations will be considered for this specific mortgage</small>
        <% if @mortgage_funder_pool.errors[:active].any? %>
          <div class="field-error"><%= @mortgage_funder_pool.errors[:active].first %></div>
        <% end %>
      </div>
    </div>

    <div class="form-actions">
      <%= form.submit "Add Funder Pool", class: "admin-btn admin-btn-primary" %>
      <%= link_to "Cancel", admin_mortgage_path(@mortgage), class: "admin-btn admin-btn-secondary" %>
    </div>
  <% end %>
  
  <% if @available_funder_pools.empty? %>
    <div class="empty-state">
      <h4>No available funder pools</h4>
      <p>All existing funder pools are already associated with this mortgage.</p>
      <div class="empty-state-actions">
        <%= link_to "View All Funder Pools", admin_funder_pools_path, class: "admin-btn admin-btn-secondary" %>
      </div>
    </div>
  <% end %>
</div>

