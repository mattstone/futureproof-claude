<%= form_with(model: [:admin, contract], local: true, class: "admin-form") do |form| %>
  
  <% if contract.errors.any? %>
    <div class="admin-error-messages">
      <h4><%= pluralize(contract.errors.count, "error") %> prohibited this contract from being saved:</h4>
      <ul>
        <% contract.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="admin-form-section">
    <h3>Contract Details</h3>
    
    <div class="admin-field">
      <%= form.label :application_id, "Application" %>
      <%= form.select :application_id, 
          options_from_collection_for_select(applications, :id, :contract_display_name, contract.application_id), 
          { prompt: 'Select an accepted application...' }, 
          { class: "admin-form-select", required: true } %>
      <small class="field-hint">
        <% if contract.persisted? %>
          You can change the application if needed (only accepted applications without contracts are shown).
        <% else %>
          Only accepted applications without existing contracts are shown.
        <% end %>
      </small>
    </div>

    <div class="admin-field-group">
      <div class="admin-field">
        <%= form.label :status %>
        <%= form.select :status, 
            options_from_collection_for_select(Contract.statuses, :first, :first, contract.status), 
            {}, 
            { class: "admin-form-select" } %>
      </div>
      
      <div class="admin-field">
        <!-- Status help text -->
        <label>&nbsp;</label>
        <div class="status-help">
          <small>
            <strong>Status Guide:</strong><br>
            • Awaiting Funding - Contract created, waiting for funding approval<br>
            • Awaiting Investment - Funding approved, waiting for investment<br>
            • OK - Active and in good standing<br>
            • In Holiday - Temporary payment suspension<br>
            • In Arrears - Behind on payments<br>
            • Complete - Contract fulfilled/ended
          </small>
        </div>
      </div>
    </div>

    <div class="admin-field-group">
      <div class="admin-field">
        <%= form.label :start_date %>
        <%= form.date_field :start_date, class: "admin-form-input", required: true %>
        <small class="field-hint">Contract start date</small>
      </div>
      
      <div class="admin-field">
        <%= form.label :end_date %>
        <%= form.date_field :end_date, class: "admin-form-input", required: true %>
        <small class="field-hint">Contract end date</small>
      </div>
    </div>
  </div>

  <div class="admin-form-actions">
    <%= form.submit contract.persisted? ? "Update Contract" : "Create Contract", class: "admin-btn admin-btn-primary" %>
    <%= link_to "Cancel", contract.persisted? ? admin_contract_path(contract) : admin_contracts_path, class: "admin-btn admin-btn-outline" %>
  </div>
  
<% end %>

<style>
.admin-form-section {
  background: #ffffff;
  border-radius: 8px;
  padding: 24px;
  border: 1px solid #e5e7eb;
  margin-bottom: 24px;
}

.admin-form-section h3 {
  margin: 0 0 20px 0;
  color: #374151;
  font-size: 18px;
  font-weight: 600;
  border-bottom: 1px solid #e5e7eb;
  padding-bottom: 12px;
}

.admin-field-group {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
}

.admin-field {
  margin-bottom: 20px;
}

.admin-field label {
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: #374151;
  margin-bottom: 6px;
}

.admin-form-input,
.admin-form-select {
  width: 100%;
  padding: 10px 12px;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-size: 14px;
  background-color: #ffffff;
}

.admin-form-input:focus,
.admin-form-select:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.field-hint {
  color: #6b7280;
  font-size: 12px;
  margin-top: 4px;
  display: block;
}

.status-help {
  background-color: #f9fafb;
  border: 1px solid #e5e7eb;
  border-radius: 6px;
  padding: 12px;
  margin-top: 6px;
}

.status-help small {
  color: #374151;
  line-height: 1.4;
}

.admin-error-messages {
  background-color: #fef2f2;
  border: 1px solid #fecaca;
  border-radius: 6px;
  padding: 16px;
  margin-bottom: 24px;
}

.admin-error-messages h4 {
  color: #dc2626;
  margin: 0 0 8px 0;
  font-size: 14px;
  font-weight: 600;
}

.admin-error-messages ul {
  margin: 0;
  padding-left: 20px;
}

.admin-error-messages li {
  color: #dc2626;
  font-size: 14px;
  margin-bottom: 4px;
}

.admin-form-actions {
  display: flex;
  gap: 12px;
  justify-content: flex-end;
  padding-top: 20px;
  border-top: 1px solid #e5e7eb;
}

@media (max-width: 768px) {
  .admin-field-group {
    grid-template-columns: 1fr;
  }
  
  .admin-form-actions {
    flex-direction: column;
  }
}
</style>