<% content_for :page_title, "New Contract" %>

<div class="admin-header-actions">
  <%= link_to "Back to Contracts", admin_contracts_path, class: "admin-btn admin-btn-outline" %>
</div>

<div class="admin-form-container">
  <!-- Set default values for new contract -->
  <% @contract.start_date ||= Date.current %>
  <% @contract.end_date ||= Date.current + 5.years %>
  
  <%= render 'form', contract: @contract, applications: @applications %>
</div>

<% if @applications.empty? %>
  <div class="admin-empty-state" style="margin-top: 40px;">
    <div class="empty-state-content">
      <h3>No Available Applications</h3>
      <p>
        There are no accepted applications available for contract creation.
        All accepted applications may already have contracts assigned.
      </p>
      <%= link_to "View Applications", admin_applications_path, class: "admin-btn admin-btn-secondary" %>
    </div>
  </div>
<% end %>

<style>
.admin-form-container {
  max-width: 800px;
  margin: 24px 0;
}

.admin-form-section {
  background: #ffffff;
  border-radius: 8px;
  padding: 24px;
  border: 1px solid #e5e7eb;
  margin-bottom: 24px;
}

.admin-form-section h3 {
  margin: 0 0 20px 0;
  color: #374151;
  font-size: 18px;
  font-weight: 600;
  border-bottom: 1px solid #e5e7eb;
  padding-bottom: 12px;
}

.admin-field-group {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 20px;
}

.admin-field {
  margin-bottom: 20px;
}

.admin-field label {
  display: block;
  font-size: 14px;
  font-weight: 500;
  color: #374151;
  margin-bottom: 6px;
}

.admin-form-input,
.admin-form-select {
  width: 100%;
  padding: 10px 12px;
  border: 1px solid #d1d5db;
  border-radius: 6px;
  font-size: 14px;
  background-color: #ffffff;
}

.admin-form-input:focus,
.admin-form-select:focus {
  outline: none;
  border-color: #3b82f6;
  box-shadow: 0 0 0 3px rgba(59, 130, 246, 0.1);
}

.field-hint {
  color: #6b7280;
  font-size: 12px;
  margin-top: 4px;
  display: block;
}

.status-help {
  background-color: #f9fafb;
  border: 1px solid #e5e7eb;
  border-radius: 6px;
  padding: 12px;
  margin-top: 6px;
}

.status-help small {
  color: #374151;
  line-height: 1.4;
}

.admin-error-messages {
  background-color: #fef2f2;
  border: 1px solid #fecaca;
  border-radius: 6px;
  padding: 16px;
  margin-bottom: 24px;
}

.admin-error-messages h4 {
  color: #dc2626;
  margin: 0 0 8px 0;
  font-size: 14px;
  font-weight: 600;
}

.admin-error-messages ul {
  margin: 0;
  padding-left: 20px;
}

.admin-error-messages li {
  color: #dc2626;
  font-size: 14px;
  margin-bottom: 4px;
}

.admin-form-actions {
  display: flex;
  gap: 12px;
  justify-content: flex-end;
  padding-top: 20px;
  border-top: 1px solid #e5e7eb;
}

@media (max-width: 768px) {
  .admin-field-group {
    grid-template-columns: 1fr;
  }
  
  .admin-form-actions {
    flex-direction: column;
  }
}
</style>