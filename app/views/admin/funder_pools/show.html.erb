<% content_for :page_title, @funder_pool.display_name %>

<div class="admin-actions-bar">
  <div>
    <h1><%= @funder_pool.name %></h1>
    <p class="page-subtitle"><%= @funder.name %> â€¢ Available: <%= @funder_pool.formatted_available %></p>
  </div>
  
  <div class="admin-actions">
    <%= link_to "Edit Pool", edit_admin_funder_funder_pool_path(@funder, @funder_pool), class: "admin-btn admin-btn-primary" %>
    <%= link_to "Delete", admin_funder_funder_pool_path(@funder, @funder_pool), method: :delete, 
        data: { confirm: "Are you sure you want to delete this pool?" }, 
        class: "admin-btn admin-btn-danger" %>
    <%= link_to "Back to #{@funder.name}", admin_funder_path(@funder), class: "admin-btn admin-btn-secondary" %>
  </div>
</div>

<!-- Pool Details -->
<div class="admin-card">
  <h3>Pool Information</h3>
  
  <div class="detail-grid">
    <div class="detail-item">
      <label>Pool Name</label>
      <div class="detail-value"><%= @funder_pool.name %></div>
    </div>
    
    <div class="detail-item">
      <label>Funder</label>
      <div class="detail-value">
        <%= link_to @funder.name, admin_funder_path(@funder), class: "admin-link" %>
      </div>
    </div>
    
    <div class="detail-item">
      <label>Total Amount</label>
      <div class="detail-value amount-total"><%= @funder_pool.formatted_amount %></div>
    </div>
    
    <div class="detail-item">
      <label>Allocated Amount</label>
      <div class="detail-value amount-allocated"><%= @funder_pool.formatted_allocated %></div>
    </div>
    
    <div class="detail-item">
      <label>Available Amount</label>
      <div class="detail-value amount-available"><%= @funder_pool.formatted_available %></div>
    </div>
    
    <div class="detail-item">
      <label>Allocation Percentage</label>
      <div class="detail-value">
        <div class="allocation-bar">
          <div class="allocation-progress" style="width: <%= @funder_pool.allocation_percentage %>%"></div>
          <span class="allocation-text"><%= @funder_pool.allocation_percentage %>%</span>
        </div>
      </div>
    </div>
    
    <div class="detail-item">
      <label>Created</label>
      <div class="detail-value"><%= @funder_pool.created_at.strftime("%B %d, %Y at %I:%M %p") %></div>
    </div>
    
    <div class="detail-item">
      <label>Last Updated</label>
      <div class="detail-value"><%= @funder_pool.updated_at.strftime("%B %d, %Y at %I:%M %p") %></div>
    </div>
  </div>
</div>

<style>
.detail-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
  gap: 24px;
}

.detail-item {
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.detail-item label {
  font-weight: 600;
  color: #374151;
  font-size: 14px;
  text-transform: uppercase;
  letter-spacing: 0.5px;
}

.detail-value {
  font-size: 16px;
  color: #1f2937;
  padding: 8px 0;
}

.amount-total {
  color: #059669;
  font-weight: 600;
  font-size: 18px;
}

.amount-allocated {
  color: #dc2626;
  font-weight: 600;
  font-size: 18px;
}

.amount-available {
  color: #0891b2;
  font-weight: 600;
  font-size: 18px;
}

.allocation-bar {
  position: relative;
  background: #e5e7eb;
  border-radius: 8px;
  height: 24px;
  overflow: hidden;
}

.allocation-progress {
  height: 100%;
  background: linear-gradient(90deg, #10b981 0%, #dc2626 100%);
  border-radius: 8px;
  transition: width 0.3s ease;
}

.allocation-text {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 12px;
  font-weight: 600;
  color: white;
  text-shadow: 0 1px 2px rgba(0, 0, 0, 0.5);
}

.page-subtitle {
  color: #6b7280;
  font-size: 14px;
  margin: 0;
}

@media (max-width: 768px) {
  .detail-grid {
    grid-template-columns: 1fr;
  }
}
</style>
