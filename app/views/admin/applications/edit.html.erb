.message-form-section h3, .message-history-section h3 {
  margin: 0 0 8px 0;
  color: #374151;
  font-size: 18px;
}

.section-subtitle {
  margin: 0 0 20px 0;
  color: #6b7280;
  font-size: 14px;
}

.message-form {
  background: white;
  border: 1px solid #e5e7eb;
  border-radius: 8px;
  padding: 20px;
}

