<% content_for :page_title, "Edit Application" %>

<div class="admin-actions-bar">
  <div>
    <%= link_to "← Back to Applications", admin_applications_path, class: "admin-btn admin-btn-secondary" %>
  </div>
  
  <div class="admin-actions">
    <%= link_to "View Application", admin_application_path(@application), class: "admin-btn admin-btn-secondary" %>
  </div>
</div>

<div class="admin-two-column-layout">
  <!-- Left Column - Application Information and Status Edit -->
  <div class="admin-left-column">
    <!-- Application Details Section (Read-Only) -->
    <div class="admin-form">
      <div class="application-header">
        <h2>Application #<%= @application.id %></h2>
        <div class="application-status" id="application-status-badge">
          <%= render 'status_badge', application: @application %>
        </div>
      </div>
      
      <div class="application-details">
        <div class="detail-row">
          <strong>User:</strong>
          <div>
            <%= @application.user.display_name %>
            <br>
            <small class="user-email"><%= @application.user.email %></small>
            <br>
            <%= link_to "View User", admin_user_path(@application.user), class: "admin-link" %>
          </div>
        </div>
        
        <div class="detail-row">
          <strong>Address:</strong>
          <%= @application.address %>
        </div>
        
        <div class="detail-row">
          <strong>Home Value:</strong>
          <span class="admin-badge admin-badge-user">
            <%= @application.formatted_home_value %>
          </span>
        </div>
        
        <div class="detail-row">
          <strong>Ownership Status:</strong>
          <%= @application.ownership_status_display %>
        </div>
        
        <div class="detail-row">
          <strong>Property State:</strong>
          <%= @application.property_state_display %>
        </div>
        
        <% if @application.has_existing_mortgage? %>
          <div class="detail-row">
            <strong>Existing Mortgage:</strong>
            <%= @application.formatted_existing_mortgage_amount %>
          </div>
        <% else %>
          <div class="detail-row">
            <strong>Existing Mortgage:</strong>
            <span class="no-mortgage-text">No existing mortgage</span>
          </div>
        <% end %>
        
        <% if @application.mortgage.present? %>
          <div class="detail-row">
            <strong>Mortgage Type:</strong>
            <span class="admin-badge admin-badge-secondary">
              <%= @application.mortgage.mortgage_type_display %>
            </span>
          </div>
          
          <div class="detail-row">
            <strong>Monthly Income:</strong>
            <span class="admin-badge admin-badge-success">
              <%= @application.formatted_monthly_income_amount %>
            </span>
          </div>
        <% else %>
          <div class="detail-row">
            <strong>Mortgage Type:</strong>
            <span class="not-selected-text">Not selected</span>
          </div>
          
          <div class="detail-row">
            <strong>Monthly Income:</strong>
            <span class="not-calculated-text">Not calculated</span>
          </div>
        <% end %>
        
        <div class="detail-row">
          <strong>Borrower Age:</strong>
          <%= @application.borrower_age %> years
        </div>
        
        <% if @application.has_borrower_names? %>
          <div class="detail-row">
            <strong>Borrower Names:</strong>
            <div class="borrower-names-display"><%= @application.formatted_borrower_names %></div>
          </div>
        <% end %>
        
        <% if @application.status_rejected? && @application.rejected_reason.present? %>
          <div class="detail-row">
            <strong>Rejection Reason:</strong>
            <div class="rejection-reason">
              <%= simple_format(@application.rejected_reason) %>
            </div>
          </div>
        <% end %>
        
        <div class="detail-row">
          <strong>Created:</strong>
          <%= @application.created_at.strftime("%B %d, %Y at %I:%M %p") %>
        </div>
        
        <div class="detail-row">
          <strong>Last Updated:</strong>
          <%= @application.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
        </div>
      </div>
    </div>

    <!-- Flash messages container for Turbo Stream updates -->
    <div id="flash-messages"></div>
    
    <!-- Status Update Form Section -->
    <div class="admin-form status-update-section">
      <div id="application-form-errors"></div>
      <%= form_with(model: [:admin, @application], local: false, class: "status-form", id: "application-status-form", data: { controller: "status-form" }) do |form| %>
        <h3>Update Application Status</h3>
        <p class="section-subtitle">Only the application status can be modified by administrators</p>
        
        <% if @application.errors.any? %>
          <div class="alert alert-danger">
            <h4><%= pluralize(@application.errors.count, "error") %> prohibited this application from being saved:</h4>
            <ul>
              <% @application.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="field">
          <%= form.label :status, "Application Status" %>
          <% status_options = [
               ['Processing', 'processing'],
               ['Rejected', 'rejected']
             ] %>
          <% if @application.checklist_completed? %>
            <% status_options << ['Accepted', 'accepted'] %>
          <% end %>
          <%= form.select :status, 
              options_for_select(status_options, @application.status), 
              { prompt: 'Select Status' }, 
              { required: true, class: 'status-select', data: { status_form_target: 'statusSelect', action: 'change->status-form#statusChanged' } } %>
          <small class="form-help-text">
            <% if @application.checklist_completed? %>
              All checklist items completed. Application can be accepted, rejected, or kept in processing.
            <% else %>
              Complete all checklist items to enable "Accepted" status. Currently available: processing and rejected.
            <% end %>
          </small>
        </div>

        <div class="field rejected-reason-field <%= 'rejected-reason-field-hidden' unless @application.status == 'rejected' %>" data-status-form-target="rejectedReasonField">
          <%= form.label :rejected_reason, "Reason for Rejection" %>
          <%= form.text_area :rejected_reason, rows: 3, placeholder: "Please provide a detailed reason for rejection...", class: 'rejected-reason-textarea', data: { status_form_target: 'rejectedReasonTextarea' } %>
          <small class="form-help-text">
            Required when rejecting an application
          </small>
        </div>

        <div class="actions form-actions">
          <%= form.submit "Update Status", class: "admin-btn admin-btn-primary" %>
          <%= link_to "Cancel", admin_application_path(@application), class: "admin-btn admin-btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Right Column - Checklist and Messages -->
  <div class="admin-right-column" id="admin-right-column">
    <!-- Application Processing Checklist -->
    <%= render 'checklist', editable: true %>
    
    <!-- Messages and Communication -->
    <%= render 'shared/messaging/messaging_interface' %>
  </div>
</div>

<%= render 'shared/messaging/messaging_assets' %>