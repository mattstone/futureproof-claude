<% content_for :page_title, "Application Details" %>

<div class="admin-actions-bar">
  <div>
    <%= link_to "← Back to Applications", admin_applications_path, class: "admin-btn admin-btn-secondary" %>
  </div>
  
  <div class="admin-actions">
    <%= link_to "Edit Application", edit_admin_application_path(@application), class: "admin-btn admin-btn-primary" %>
  </div>
</div>

<div class="admin-two-column-layout">
  <!-- Left Column - Application Details and Change History Only -->
  <div class="admin-left-column">
    <!-- Application Details Section -->
    <div class="admin-form">
      <div class="application-header">
        <h2>Application #<%= @application.id %></h2>
        <div class="application-status">
          <%= render 'status_badge', application: @application %>
        </div>
      </div>
      
      <div class="application-details">
        <div class="detail-row">
          <strong>User:</strong>
          <div>
            <%= @application.user.display_name %>
            <br>
            <small style="color: #6b7280;"><%= @application.user.email %></small>
            <br>
            <%= link_to "View User", admin_user_path(@application.user), class: "admin-link" %>
          </div>
        </div>
        
        <div class="detail-row">
          <strong>Address:</strong>
          <%= @application.address %>
        </div>
        
        <div class="detail-row">
          <strong>Home Value:</strong>
          <span class="admin-badge admin-badge-user">
            <%= @application.formatted_home_value %>
          </span>
        </div>
        
        <div class="detail-row">
          <strong>Ownership Status:</strong>
          <%= @application.ownership_status_display %>
        </div>
        
        <div class="detail-row">
          <strong>Property State:</strong>
          <%= @application.property_state_display %>
        </div>
        
        <% if @application.has_existing_mortgage? %>
          <div class="detail-row">
            <strong>Existing Mortgage:</strong>
            <%= @application.formatted_existing_mortgage_amount %>
          </div>
        <% else %>
          <div class="detail-row">
            <strong>Existing Mortgage:</strong>
            <span style="color: #6b7280; font-style: italic;">No existing mortgage</span>
          </div>
        <% end %>
        
        <% if @application.mortgage.present? %>
          <div class="detail-row">
            <strong>Mortgage Type:</strong>
            <span class="admin-badge admin-badge-secondary">
              <%= @application.mortgage.mortgage_type_display %>
            </span>
          </div>
          
          <div class="detail-row">
            <strong>Monthly Income:</strong>
            <span class="admin-badge admin-badge-success">
              <%= @application.formatted_monthly_income_amount %>
            </span>
          </div>
        <% else %>
          <div class="detail-row">
            <strong>Mortgage Type:</strong>
            <span style="color: #6b7280; font-style: italic;">Not selected</span>
          </div>
          
          <div class="detail-row">
            <strong>Monthly Income:</strong>
            <span style="color: #6b7280; font-style: italic;">Not calculated</span>
          </div>
        <% end %>
        
        <div class="detail-row">
          <strong>Borrower Age:</strong>
          <%= @application.borrower_age %> years
        </div>
        
        <% if @application.has_borrower_names? %>
          <div class="detail-row">
            <strong>Borrower Names:</strong>
            <div style="white-space: pre-line;"><%= @application.formatted_borrower_names %></div>
          </div>
        <% end %>
        
        <% if @application.status_rejected? && @application.rejected_reason.present? %>
          <div class="detail-row">
            <strong>Rejection Reason:</strong>
            <div class="rejection-reason">
              <%= simple_format(@application.rejected_reason) %>
            </div>
          </div>
        <% end %>
        
        <div class="detail-row">
          <strong>Created:</strong>
          <%= @application.created_at.strftime("%B %d, %Y at %I:%M %p") %>
        </div>
        
        <div class="detail-row">
          <strong>Last Updated:</strong>
          <%= @application.updated_at.strftime("%B %d, %Y at %I:%M %p") %>
        </div>
      </div>
    </div>

    <!-- Change History Section -->
    <%= render 'shared/change_history', versions: @application_versions %>
  </div>

  <!-- Right Column - Messages and Communication -->
  <div class="admin-right-column">
    <%= render 'shared/messaging/messaging_interface' %>
  </div>
</div>

<%= render 'shared/messaging/messaging_assets' %>

<style>
/* Two-Column Layout CSS */
.admin-two-column-layout {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40px;
  margin-top: 20px;
}

.admin-left-column {
  min-width: 0; /* Prevents grid overflow */
}

.admin-right-column {
  min-width: 0; /* Prevents grid overflow */
  position: sticky;
  top: 20px;
  height: fit-content;
}

/* Application Details Styles */
.application-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 24px;
  padding-bottom: 16px;
  border-bottom: 1px solid #e5e7eb;
}

.application-header h2 {
  margin: 0;
}

.application-status {
  flex-shrink: 0;
}

.application-details {
  margin-top: 24px;
}

.detail-row {
  padding: 12px 0;
  border-bottom: 1px solid #e5e7eb;
  display: flex;
  gap: 16px;
  align-items: start;
}

.detail-row:last-child {
  border-bottom: none;
}

.detail-row strong {
  min-width: 120px;
  color: #374151;
  flex-shrink: 0;
}


/* Rejection Reason Display */
.rejection-reason {
  background: #fef2f2;
  border: 1px solid #fca5a5;
  border-radius: 6px;
  padding: 12px;
  color: #dc2626;
  font-size: 14px;
  line-height: 1.5;
}

.rejection-reason p {
  margin: 0;
}

.rejection-reason p + p {
  margin-top: 8px;
}

/* Responsive Design */
@media (max-width: 1400px) {
  .admin-two-column-layout {
    grid-template-columns: 1.2fr 0.8fr;
    gap: 32px;
  }
}

@media (max-width: 1200px) {
  .admin-two-column-layout {
    grid-template-columns: 1fr;
    gap: 24px;
  }
  
  .admin-right-column {
    position: static;
  }
}

@media (max-width: 768px) {
  .change-header, .message-header {
    flex-direction: column;
    align-items: flex-start;
    gap: 8px;
  }
  
  .change-info, .message-info {
    flex-wrap: wrap;
  }
}
</style>